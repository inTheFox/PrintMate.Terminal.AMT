<hc:Window x:Class="OpcDebugger.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:views="clr-namespace:OpcDebugger.Views"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        WindowStartupLocation="CenterScreen"
        ShowTitle="True"
        ResizeMode="CanResize"
        BorderBrush="Black"
        Height="1080"
        WindowState="Maximized"
        Width="1920">
    <hc:Window.Resources>
        <SolidColorBrush x:Key="RegionBrush" Color="Black"/>
        <SolidColorBrush x:Key="RegionInactiveBrush" Color="Black"/>

    </hc:Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Панель подключения -->
            <RowDefinition Height="*" />
            <!-- Основной контент с регионами -->
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Padding="10" Background="#262626" HorizontalAlignment="Stretch" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border Margin="1" CornerRadius="5" Background="#3D3D3D">
                    <StackPanel Margin="10" Grid.Column="0">
                        <TextBlock FontWeight="Bold" Margin="5" Foreground="White">Адрес</TextBlock>
                        <TextBox Text="{Binding Address}" Foreground="White" Background="#262626" Height="40" BorderBrush="Transparent" Grid.Column="0" />
                    </StackPanel>
                </Border>
                <Border Margin="1" CornerRadius="5" Background="#3D3D3D" Grid.Column="1">
                    <StackPanel Margin="10" Grid.Column="1">
                        <TextBlock FontWeight="Bold" Margin="5" Foreground="White">Порт</TextBlock>
                        <TextBox Text="{Binding Port}" Foreground="White" Background="#262626" Height="40" BorderBrush="Transparent" />
                    </StackPanel>
                </Border>
                <Border Margin="1" CornerRadius="5" Background="#3D3D3D" Grid.Column="2">
                    <Button Command="{Binding ConnectCommand}" Height="50" Margin="10" HorizontalAlignment="Stretch" Content="Подключиться" Style="{StaticResource ButtonSuccess}"/>
                </Border>

            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ContentControl Grid.Column="0" prism:RegionManager.RegionName="ItemsSelectorRegion" />
            <ContentControl Grid.Column="1" prism:RegionManager.RegionName="SelectedItemRegion" />
        </Grid>
    </Grid>

</hc:Window>
