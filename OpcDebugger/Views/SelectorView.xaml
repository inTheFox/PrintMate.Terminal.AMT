<UserControl x:Class="OpcDebugger.Views.SelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpcDebugger.Views"
             xmlns:visualBasic="clr-namespace:Microsoft.VisualBasic;assembly=Microsoft.VisualBasic.Core"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">
    <Grid Background="#121212">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Заголовок -->
            <RowDefinition Height="Auto" />
            <!-- TextBox -->
            <RowDefinition Height="*" />
            <!-- ListBox занимает оставшееся место -->
        </Grid.RowDefinitions>

        <TextBlock   Grid.Row="0" FontWeight="Black" FontSize="20" Margin="30" Foreground="White" TextAlignment="Center">Выберите регистр</TextBlock>
            <TextBox Grid.Row="1" FontWeight="Medium" FontSize="15" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" Foreground="White" Margin="10" Height="50" Background="#1A1A1A" BorderBrush="Transparent" />

                <!-- ListBox вместо ItemsControl + ScrollViewer -->
                <ListBox Grid.Row="2" ItemsSource="{Binding Elements}"
         SelectedItem="{Binding SelectedElement, Mode=TwoWay}"
         Margin="10"
         VerticalAlignment="Stretch"
         Background="#1A1A1A"
         BorderThickness="0"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
         ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <!-- Стиль элементов списка -->
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <!--<Setter Property="Focusable" Value="False"/>-->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="ItemBorder"
                                            Margin="3"
                                            Padding="10 10 0 10"
                                            Background="#242424"
                                            CornerRadius="5"
                                            Cursor="Hand">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock x:Name="VariableName" FontWeight="Medium" FontSize="15"
                                           TextAlignment="Left" VerticalAlignment="Center"
                                           Foreground="White" Text="{Binding Name}" />
                                                <TextBlock x:Name="VariableCommand" FontWeight="Medium" FontSize="15"
                                           TextAlignment="Left" VerticalAlignment="Center"
                                           Foreground="#757575" Text="{Binding Cmd}" />
                                                <TextBlock x:Name="VariableValueType" FontWeight="Medium" FontSize="10"
                                           TextAlignment="Left" VerticalAlignment="Center"
                                           Foreground="Red" Text="{Binding ValueType}" />
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!-- Выделенный элемент -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#8FFFA0" />
                                                <Setter TargetName="VariableName" Property="Foreground" Value="Black" />
                                                <Setter TargetName="VariableCommand" Property="Foreground" Value="Black" />

                                            </Trigger>
                                            <!-- Эффект при наведении (опционально) -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#96FFCD" />
                                                <Setter TargetName="VariableName" Property="Foreground" Value="Black" />
                                                <Setter TargetName="VariableCommand" Property="Foreground" Value="Black" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            
            

    </Grid>
</UserControl>
