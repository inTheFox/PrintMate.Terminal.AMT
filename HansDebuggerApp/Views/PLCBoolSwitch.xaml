<UserControl x:Class="HansDebuggerApp.Views.PLCBoolSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:HansDebuggerApp.Views"
             mc:Ignorable="d" >
    <Border Background="White" Padding="10" CornerRadius="5" Margin="1" MouseDown="UIElement_OnMouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Grid.Column="0" FontSize="15" x:Name="TextBlock" TextAlignment="Left" HorizontalAlignment="Left" TextWrapping="Wrap" Foreground="Black" Text="{Binding CommandInfo.Title, RelativeSource={RelativeSource AncestorType={x:Type local:PLCBoolSwitch}}}"/>
            <ToggleButton x:Name="ToggleButton" Grid.Column="1" IsChecked="False" Margin="5" HorizontalAlignment="Center" Style="{StaticResource ToggleButtonSwitch}" hc:VisualElement.HighlightBrush="{DynamicResource SuccessBrush}"/>
        </Grid>
        

    </Border>
</UserControl>
