<UserControl x:Class="PrintMate.Terminal.Views.ProjectPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920"
             Background="#252526">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 3D Viewport (стандартный WPF) -->
        <Border Height="500" Grid.Row="0" Background="#1E1E1E" BorderBrush="#00FF00" BorderThickness="2">
            <Viewport3D Height="500" x:Name="Viewport" ClipToBounds="True">
                <!-- Камера -->
                <Viewport3D.Camera>
                    <PerspectiveCamera Position="0,-200,100"
                                     LookDirection="0,200,-100"
                                     UpDirection="0,0,1"
                                     FieldOfView="60"/>
                </Viewport3D.Camera>

                <!-- Освещение -->
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <Model3DGroup>
                            <AmbientLight Color="#FFFFFF"/>
                            <DirectionalLight Color="#FFFFFF" Direction="1,1,-1"/>
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>

                <!-- Тестовый БОЛЬШОЙ куб для проверки -->
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <GeometryModel3D>
                            <GeometryModel3D.Geometry>
                                <MeshGeometry3D
                                    Positions="-50,-50,0  50,-50,0  50,50,0  -50,50,0  -50,-50,100  50,-50,100  50,50,100  -50,50,100"
                                    TriangleIndices="0,1,2  0,2,3  4,7,6  4,6,5  0,4,5  0,5,1  1,5,6  1,6,2  2,6,7  2,7,3  0,3,7  0,7,4"/>
                            </GeometryModel3D.Geometry>
                            <GeometryModel3D.Material>
                                <DiffuseMaterial>
                                    <DiffuseMaterial.Brush>
                                        <SolidColorBrush Color="#FF00FF00"/>
                                    </DiffuseMaterial.Brush>
                                </DiffuseMaterial>
                            </GeometryModel3D.Material>
                            <GeometryModel3D.BackMaterial>
                                <DiffuseMaterial>
                                    <DiffuseMaterial.Brush>
                                        <SolidColorBrush Color="#FFFF0000"/>
                                    </DiffuseMaterial.Brush>
                                </DiffuseMaterial>
                            </GeometryModel3D.BackMaterial>
                            <GeometryModel3D.Transform>
                                <RotateTransform3D>
                                    <RotateTransform3D.Rotation>
                                        <AxisAngleRotation3D Axis="0,0,1" Angle="{Binding Layer3DViewModel.RotationAngle, FallbackValue=0}"/>
                                    </RotateTransform3D.Rotation>
                                </RotateTransform3D>
                            </GeometryModel3D.Transform>
                        </GeometryModel3D>
                    </ModelVisual3D.Content>
                </ModelVisual3D>

                <!-- Координатные оси для ориентации -->
                <!-- Ось X - красная -->
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <GeometryModel3D>
                            <GeometryModel3D.Geometry>
                                <MeshGeometry3D
                                    Positions="0,0,0  100,0,0  100,2,0  0,2,0  0,0,2  100,0,2  100,2,2  0,2,2"
                                    TriangleIndices="0,1,2  0,2,3  4,7,6  4,6,5  0,4,5  0,5,1  1,5,6  1,6,2  2,6,7  2,7,3  0,3,7  0,7,4"/>
                            </GeometryModel3D.Geometry>
                            <GeometryModel3D.Material>
                                <DiffuseMaterial Brush="Red"/>
                            </GeometryModel3D.Material>
                        </GeometryModel3D>
                    </ModelVisual3D.Content>
                </ModelVisual3D>

                <!-- Ось Y - зеленая -->
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <GeometryModel3D>
                            <GeometryModel3D.Geometry>
                                <MeshGeometry3D
                                    Positions="0,0,0  0,100,0  2,100,0  2,0,0  0,0,2  0,100,2  2,100,2  2,0,2"
                                    TriangleIndices="0,1,2  0,2,3  4,7,6  4,6,5  0,4,5  0,5,1  1,5,6  1,6,2  2,6,7  2,7,3  0,3,7  0,7,4"/>
                            </GeometryModel3D.Geometry>
                            <GeometryModel3D.Material>
                                <DiffuseMaterial Brush="Lime"/>
                            </GeometryModel3D.Material>
                        </GeometryModel3D>
                    </ModelVisual3D.Content>
                </ModelVisual3D>

                <!-- Ось Z - синяя -->
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <GeometryModel3D>
                            <GeometryModel3D.Geometry>
                                <MeshGeometry3D
                                    Positions="0,0,0  2,0,0  2,2,0  0,2,0  0,0,100  2,0,100  2,2,100  0,2,100"
                                    TriangleIndices="0,1,2  0,2,3  4,7,6  4,6,5  0,4,5  0,5,1  1,5,6  1,6,2  2,6,7  2,7,3  0,3,7  0,7,4"/>
                            </GeometryModel3D.Geometry>
                            <GeometryModel3D.Material>
                                <DiffuseMaterial Brush="Blue"/>
                            </GeometryModel3D.Material>
                        </GeometryModel3D>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
            </Viewport3D>
        </Border>

        <!-- Панель управления вращением -->
        <Border Grid.Row="1"
                Background="#2D2D30"
                BorderBrush="#3E3E42"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Вращение"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"
                           Foreground="White"/>

                <Slider Grid.Column="1"
                        Minimum="0"
                        Maximum="360"
                        Value="{Binding Layer3DViewModel.RotationAngle, Mode=TwoWay, FallbackValue=0}"
                        TickFrequency="45"
                        IsSnapToTickEnabled="False"
                        VerticalAlignment="Center"
                        Height="40"/>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="15,0,0,0">
                    <TextBlock Text="Угол: "
                               Foreground="#999999"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Layer3DViewModel.RotationAngle, StringFormat={}{0:F0}°, FallbackValue=0°}"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               Width="50"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель управления печатью -->
        <Border Grid.Row="2"
                Background="#2D2D30"
                BorderBrush="#3E3E42"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Загрузить mybox.cli"
                        Command="{Binding LoadTestProjectCommand}"
                        Padding="15,10"
                        Margin="5"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"/>

                <Button Content="Начать симуляцию"
                        Command="{Binding StartSimulationCommand}"
                        Padding="15,10"
                        Margin="5"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"/>

                <Button Content="Пауза"
                        Command="{Binding PauseSimulationCommand}"
                        Padding="15,10"
                        Margin="5"
                        Background="#FF9800"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"/>

                <Button Content="Стоп"
                        Command="{Binding StopSimulationCommand}"
                        Padding="15,10"
                        Margin="5"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Информационная панель -->
        <Border Grid.Row="0"
                Background="#CC1E1E1E"
                Padding="15"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                CornerRadius="5"
                BorderBrush="#FFD700"
                BorderThickness="2">
            <StackPanel>
                <TextBlock Text="3D Визуализация (DEBUG)"
                           Foreground="#FFD700"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <TextBlock Foreground="White" FontSize="12">
                    <Run Text="Зеленый куб = 3D работает!"/>
                </TextBlock>
                <TextBlock Foreground="White" FontSize="12">
                    <Run Text="Красная линия = ось X"/>
                </TextBlock>
                <TextBlock Foreground="White" FontSize="12">
                    <Run Text="Зеленая линия = ось Y"/>
                </TextBlock>
                <TextBlock Foreground="White" FontSize="12">
                    <Run Text="Синяя линия = ось Z"/>
                </TextBlock>
                <TextBlock Foreground="#FFD700" FontSize="12" Margin="0,10,0,0">
                    <Run Text="Крутите ползунок вращения!"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
