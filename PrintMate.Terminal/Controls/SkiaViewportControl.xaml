<UserControl x:Class="PrintMate.Terminal.Controls.SkiaViewportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Black"
             Focusable="True"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">

    <Grid x:Name="RootGrid">
        <!-- SkiaSharp SKElement для GPU рендеринга -->
        <skia:SKElement x:Name="SkiaCanvas"
                        PaintSurface="SkiaCanvas_PaintSurface"
                        MouseLeftButtonDown="SkiaCanvas_MouseLeftButtonDown"
                        MouseLeftButtonUp="SkiaCanvas_MouseLeftButtonUp"
                        MouseRightButtonDown="SkiaCanvas_MouseRightButtonDown"
                        MouseRightButtonUp="SkiaCanvas_MouseRightButtonUp"
                        MouseMove="SkiaCanvas_MouseMove"
                        MouseWheel="SkiaCanvas_MouseWheel"/>

        <!-- Подсказка управления -->
        <Border HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10"
                Padding="8"
                Background="#60000000"
                CornerRadius="4">
            <StackPanel Opacity="0.7">
                <TextBlock Foreground="Gray" FontSize="10" Text="ЛКМ - вращение"/>
                <TextBlock Foreground="Gray" FontSize="10" Text="ПКМ - панорамирование"/>
                <TextBlock Foreground="Gray" FontSize="10" Text="Колесо - масштаб"/>
                <TextBlock Foreground="Gray" FontSize="10" Text="R - сброс камеры"/>
            </StackPanel>
        </Border>

        <!-- FPS индикатор (отладка) -->
        <TextBlock x:Name="FpsText"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="10"
                   Foreground="Lime"
                   FontSize="12"
                   Visibility="Collapsed"/>
    </Grid>
</UserControl>
