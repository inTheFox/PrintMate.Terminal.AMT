<UserControl x:Class="PrintMate.Terminal.Views.KeyboardComponents.NumpadKeyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="500">

    <UserControl.Resources>
        <!-- Минималистичный плоский стиль кнопок -->
        <Style x:Key="ModernNumpadButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="65"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C3C3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1C1C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для Backspace с акцентным цветом -->
        <Style x:Key="BackspaceButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernNumpadButtonStyle}">
            <Setter Property="Background" Value="IndianRed"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E53935"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#B71C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="Transparent" CornerRadius="20" Padding="15">
        <Grid Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Строка 1: 7 8 9 -->
            <UniformGrid Grid.Row="0" Rows="1" Columns="3">
                <Button Content="7" Style="{StaticResource ModernNumpadButtonStyle}" Click="OnDigitClick"/>
                <Button Content="8" Style="{StaticResource ModernNumpadButtonStyle}" Click="OnDigitClick"/>
                <Button Content="9" Style="{StaticResource ModernNumpadButtonStyle}" Click="OnDigitClick"/>
            </UniformGrid>

            <!-- Строка 2: 4 5 6 -->
            <UniformGrid Grid.Row="1" Rows="1" Columns="3">
                <Button Content="4" Style="{StaticResource ModernNumpadButtonStyle}" Click="OnDigitClick"/>
                <Button Content="5" Style="{StaticResource ModernNumpadButtonStyle}" Click="OnDigitClick"/>
                <Button Content="6" Style="{StaticResource ModernNumpadButtonStyle}" Click="OnDigitClick"/>
            </UniformGrid>

            <!-- Строка 3: 1 2 3 -->
            <UniformGrid Grid.Row="2" Rows="1" Columns="3">
                <Button Content="1" Style="{StaticResource ModernNumpadButtonStyle}" Click="OnDigitClick"/>
                <Button Content="2" Style="{StaticResource ModernNumpadButtonStyle}" Click="OnDigitClick"/>
                <Button Content="3" Style="{StaticResource ModernNumpadButtonStyle}" Click="OnDigitClick"/>
            </UniformGrid>

            <!-- Строка 4: 0, . и - (минус) -->
            <UniformGrid Grid.Row="3" Rows="1" Columns="3">
                <Button Content="0" Style="{StaticResource ModernNumpadButtonStyle}" Click="OnDigitClick"/>
                <Button Content="." Style="{StaticResource ModernNumpadButtonStyle}" Click="OnDigitClick"/>
                <Button Content="-" Style="{StaticResource ModernNumpadButtonStyle}" Click="OnMinusClick"/>
            </UniformGrid>
        </Grid>
    </Border>
</UserControl>
