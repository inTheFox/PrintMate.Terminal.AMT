<UserControl x:Class="PrintMate.Terminal.Views.RightBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="1080" d:DesignWidth="200">

    <UserControl.Resources>
        <!-- Animation -->
        <Storyboard x:Key="ShowMainView">
            <DoubleAnimation Storyboard.TargetName="mainViewGrid"
                             Storyboard.TargetProperty="Opacity"
                             To="1" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Main Container Style -->
        <Style x:Key="MainContainerStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#050505" Offset="0"/>
                        <GradientStop Color="#030303" Offset="0.5"/>
                        <GradientStop Color="#040404" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Navigation Item Style -->
        <Style x:Key="NavItemStyle" TargetType="ListBoxItem">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="itemBorder"
                                Margin="0 0 0 8"
                                Padding="12"
                                CornerRadius="16"
                                Cursor="Hand">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop x:Name="bgStart" Color="#0f0f0f" Offset="0"/>
                                    <GradientStop x:Name="bgEnd" Color="#080808" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1a1a1a" Offset="0"/>
                                    <GradientStop Color="#101010" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Border.BorderThickness>1</Border.BorderThickness>

                            <StackPanel HorizontalAlignment="Center">
                                <!-- Icon Container with Glow -->
                                <Grid Width="52" Height="52" HorizontalAlignment="Center">
                                    <!-- Glow Background -->
                                    <Border x:Name="iconGlow" CornerRadius="14" Opacity="0">
                                        <Border.Background>
                                            <RadialGradientBrush>
                                                <GradientStop Color="#40ff6f00" Offset="0"/>
                                                <GradientStop Color="#00ff6f00" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <!-- Icon Background -->
                                    <Border x:Name="iconBg" Width="48" Height="48" CornerRadius="12">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#181818" Offset="0"/>
                                                <GradientStop Color="#0f0f0f" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>

                                        <!-- White Icon (default) -->
                                        <Image x:Name="iconWhite"
                                               Source="{Binding Image}"
                                               Width="28" Height="28"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Border>

                                    <!-- Colored Icon (selected state) -->
                                    <Border x:Name="iconColoredBg" Width="48" Height="48" CornerRadius="12" Visibility="Collapsed">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#ff6f00" Offset="0"/>
                                                <GradientStop Color="#e65c00" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Rectangle Width="28" Height="28" Fill="#0a0a0a">
                                            <Rectangle.OpacityMask>
                                                <ImageBrush ImageSource="{Binding Image}"/>
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </Border>
                                </Grid>

                                <!-- Label -->
                                <TextBlock x:Name="itemText"
                                           Margin="0 8 0 0"
                                           FontWeight="SemiBold"
                                           FontSize="11"
                                           Foreground="#888888"
                                           HorizontalAlignment="Center"
                                           Text="{Binding Name}"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           MaxWidth="80"/>
                            </StackPanel>

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <i:InvokeCommandAction
                                        Command="{Binding DataContext.TestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Selected State -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="itemBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#1a1208" Offset="0"/>
                                            <GradientStop Color="#0f0a04" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="itemBorder" Property="BorderBrush">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#ff6f00" Offset="0"/>
                                            <GradientStop Color="#cc5500" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="itemBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.4" Color="#ff6f00"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="iconGlow" Property="Opacity" Value="1"/>
                                <Setter TargetName="iconBg" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="iconColoredBg" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="itemText" Property="Foreground" Value="#ff6f00"/>
                                <Setter TargetName="itemText" Property="FontWeight" Value="Bold"/>
                            </Trigger>

                            <!-- Hover State -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="itemBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#181818" Offset="0"/>
                                            <GradientStop Color="#0f0f0f" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="itemBorder" Property="BorderBrush">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#ff6f00" Offset="0"/>
                                            <GradientStop Color="#cc5500" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="itemBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.25" Color="#ff6f00"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="itemText" Property="Foreground" Value="#c0c0c0"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Quick Action Button Style -->
        <Style x:Key="QuickActionStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0f0f0f" Offset="0"/>
                        <GradientStop Color="#080808" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1a1a1a" Offset="0"/>
                        <GradientStop Color="#101010" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#181818" Offset="0"/>
                                <GradientStop Color="#0f0f0f" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#ff6f00" Offset="0"/>
                                <GradientStop Color="#cc5500" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.25" Color="#ff6f00"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>

        <!-- Icon Glow Style -->
        <Style x:Key="IconGlowStyle" TargetType="Border">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background">
                <Setter.Value>
                    <RadialGradientBrush>
                        <GradientStop Color="#20ff6f00" Offset="0"/>
                        <GradientStop Color="#00ff6f00" Offset="1"/>
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource ShowMainView}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <!-- Main Container -->
    <Border x:Name="mainViewGrid" Style="{StaticResource MainContainerStyle}" Opacity="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0" Style="{StaticResource SectionHeaderStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Accent Line -->
                <Border Width="3" Height="18" CornerRadius="2" Margin="0 0 8 0" VerticalAlignment="Center">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#ff6f00" Offset="0"/>
                            <GradientStop Color="#cc5500" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <TextBlock Grid.Column="1"
                           Text="Навигация"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#d0d0d0"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Navigation List -->
            <ListBox Grid.Row="1"
                     x:Name="navList"
                     ItemsSource="{Binding Items}"
                     SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     ItemContainerStyle="{StaticResource NavItemStyle}">
                <ListBox.Template>
                    <ControlTemplate TargetType="ListBox">
                        <ItemsPresenter/>
                    </ControlTemplate>
                </ListBox.Template>
            </ListBox>

            <!-- Quick Actions Section -->
            <StackPanel Grid.Row="2">
                <!-- Section Divider -->
                <Border Height="1" Margin="0 10 0 15">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#00ffffff" Offset="0"/>
                            <GradientStop Color="#20ffffff" Offset="0.5"/>
                            <GradientStop Color="#00ffffff" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <!-- Quick Actions Header -->
                <Grid Style="{StaticResource SectionHeaderStyle}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Width="3" Height="18" CornerRadius="2" Margin="0 0 8 0" VerticalAlignment="Center">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#4CAF50" Offset="0"/>
                                <GradientStop Color="#388E3C" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <TextBlock Grid.Column="1"
                               Text="Быстрые действия"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#888888"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Light Control -->
                <Border x:Name="LightBorderOff"
                        Style="{StaticResource QuickActionStyle}"
                        MouseDown="LightBorderOn_OnMouseDown"
                        TouchDown="LightBorderOff_OnTouchDown"
                        Margin="0 0 0 8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Light Icon with Glow -->
                        <Border Style="{StaticResource IconGlowStyle}" Margin="0 0 10 0">
                            <Image Source="{Binding LightBlockImageSrc}"
                                   Width="40" Height="40"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>

                        <!-- Status Indicator -->
                        <Border Grid.Column="2" Width="10" Height="10" CornerRadius="5" VerticalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <RadialGradientBrush>
                                                <GradientStop Color="#505050" Offset="0"/>
                                                <GradientStop Color="#303030" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding LightState}" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <RadialGradientBrush>
                                                        <GradientStop Color="#4CAF50" Offset="0"/>
                                                        <GradientStop Color="#388E3C" Offset="1"/>
                                                    </RadialGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.6" Color="#4CAF50"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </Grid>
                </Border>

                <!-- Door Control -->
                <Border x:Name="DoorOpen"
                        Style="{StaticResource QuickActionStyle}"
                        MouseDown="DoorOpen_OnMouseDown"
                        TouchDown="DoorOpen_OnTouchDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Door Icon with Glow -->
                        <Border Style="{StaticResource IconGlowStyle}" Margin="0 0 10 0">
                            <Image Source="{Binding DoorBlockImageSrc}"
                                   Width="40" Height="40"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>

                        <!-- Status Indicator -->
                        <Border Grid.Column="2" Width="10" Height="10" CornerRadius="5" VerticalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <RadialGradientBrush>
                                                <GradientStop Color="#4CAF50" Offset="0"/>
                                                <GradientStop Color="#388E3C" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.6" Color="#4CAF50"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DoorState}" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <RadialGradientBrush>
                                                        <GradientStop Color="#ff6f00" Offset="0"/>
                                                        <GradientStop Color="#cc5500" Offset="1"/>
                                                    </RadialGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.6" Color="#ff6f00"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
