<UserControl x:Class="PrintMate.Terminal.Views.ManualAxesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrintMate.Terminal.Views"
             xmlns:vm="clr-namespace:PrintMate.Terminal.ViewModels"
             xmlns:commandsOpc="clr-namespace:;assembly=Opc2Lib"
             xmlns:opc2Lib="clr-namespace:Opc2Lib;assembly=Opc2Lib"
             xmlns:componentsViews="clr-namespace:PrintMate.Terminal.Views.ComponentsViews"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             Margin="0 30 0 0"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1418">

    <UserControl.Resources>
        <!-- Glassmorphism Card Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#20ffffff" Offset="0"/>
                        <GradientStop Color="#10ffffff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#40ffffff" Offset="0"/>
                        <GradientStop Color="#20ffffff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Control Panel Card -->
        <Style x:Key="ControlPanelCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1a1a1a" Offset="0"/>
                        <GradientStop Color="#0d0d0d" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <!--<Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#ff6f00" Offset="0"/>
                        <GradientStop Color="#cc5500" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>-->
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.4" Color="#ff6f00"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Value Display Card -->
        <Style x:Key="ValueDisplayCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#252525" Offset="0"/>
                        <GradientStop Color="#1a1a1a" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3a3a3a" Offset="0"/>
                        <GradientStop Color="#2a2a2a" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="MinHeight" Value="55"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Padding" Value="12 8"/>
        </Style>

        <!-- Interactive Card Style -->
        <Style x:Key="InteractiveCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1f1f1f" Offset="0"/>
                        <GradientStop Color="#141414" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3a3a3a" Offset="0"/>
                        <GradientStop Color="#2a2a2a" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#ff6f00" Offset="0"/>
                                <GradientStop Color="#cc5500" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.3" Color="#ff6f00"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#ff6f00" Offset="0"/>
                        <GradientStop Color="#e65c00" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="15 10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.3" Color="#ff6f00"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#ff8c33" Offset="0"/>
                                            <GradientStop Color="#ff6f00" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5" Color="#ff6f00"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#cc5500" Offset="0"/>
                                            <GradientStop Color="#b34700" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                <Setter Property="Foreground" Value="#666666"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Text Style -->
        <Style x:Key="AccentText" TargetType="TextBlock">
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#ff6f00" Offset="0"/>
                        <GradientStop Color="#ffb366" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0 0 0 8"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="50 0 0 20">
                <Border Width="4" Height="35" CornerRadius="2" Margin="0 0 15 0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#ff6f00" Offset="0"/>
                            <GradientStop Color="#cc5500" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <TextBlock Text="Управление осями" Foreground="White" FontSize="32" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <Grid ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.99*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.99*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Recoater Left Controls -->
                <StackPanel Grid.Column="0">
                    <WrapPanel Margin="0 200 10 0" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <local:OpcJogButton Title="Крайнее положение" DisableTitle="False" Grid.Column="0" Margin="10 2 0 2" StartImagePath="/images/arrow_left_end_64.png" Cmd="{x:Static opc2Lib:OpcCommands.Com_Axes_RecoaterJogExtremeLeft}"/>
                        <local:OpcJogButton Title="Влево" DisableTitle="True" Grid.Column="1" Margin="5 2 10 2" StartImagePath="/images/arrow_left_64.png" Cmd="{x:Static opc2Lib:OpcCommands.Com_Axes_RecoaterJogLeft}"/>
                    </WrapPanel>
                </StackPanel>

                <!-- Center Column - Main Visualization -->
                <Canvas Grid.Column="1">
                    <!-- Printer Visualization -->
                    <Image HorizontalAlignment="Center" Canvas.Left="0" Canvas.Top="0" Width="480" Height="800" Source="/images/amt32_axes_main.png"/>
                    <Image HorizontalAlignment="Center" Canvas.Left="{Binding CurrentRecouterPosition}" Canvas.Top="225" Width="40" Source="/images/amt32_recoater.png"/>
                    <Image Source="/images/gradient.png" Width="1420" HorizontalAlignment="Left" VerticalAlignment="Center" />

                    <!-- Platform Area -->
                    <Border Canvas.Left="165" Canvas.Top="312" Background="Black" Width="122" Height="215" ClipToBounds="True">
                        <Canvas Canvas.Left="165" Canvas.Top="310">
                            <Image Canvas.Top="{Binding PlatformTop}" Width="122" Source="/images/amt32_platform.png"/>
                        </Canvas>
                    </Border>

                    <!-- Reference Controls Panel (Left Side) -->
                    <Border Canvas.Top="850" Canvas.Left="-450" Style="{StaticResource GlassCard}" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <local:OpcJogButton DisableTitle="False" Margin="0 4" StartImagePath="/images/zero_64.png" Cmd="{x:Static opc2Lib:OpcCommands.Com_Axes_PlatformRefREL}"/>
                            <local:OpcJogButton DisableTitle="False" Margin="0 4" StartImagePath="/images/zero_64.png" Cmd="{x:Static opc2Lib:OpcCommands.Com_Axes_PlatformPosZero}"/>
                            <local:OpcJogButton DisableTitle="False" Margin="0 4" StartImagePath="/images/reference_64.png" Cmd="{x:Static opc2Lib:OpcCommands.Com_Axes_RecoaterRef}"/>
                            <componentsViews:PLCLogicIndicator Padding="10 5" CommandInfo="{x:Static opc2Lib:OpcCommands.Trig_Axes_RecoaterRef}" Margin="0 4 0 0"/>
                        </StackPanel>
                    </Border>

                    <!-- Step Up/Down Controls (Left of Platform) -->
                    <Border Canvas.Top="365" Canvas.Left="-230" Style="{StaticResource GlassCard}" Width="250" Padding="12">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionTitle}" Text="Шаговое управление"/>
                            <local:OpcJogButton Title="Шаг вверх" DisableTitle="False" Margin="0 4" EndImagePath="/images/arrow_step_top_64.png" Cmd="{x:Static opc2Lib:OpcCommands.Com_Axes_PlatformStepUp}"/>
                            <local:OpcJogButton Title="Шаг вниз" DisableTitle="False" Margin="0 4" EndImagePath="/images/arrow_step_bottom_64.png" Cmd="{x:Static opc2Lib:OpcCommands.Com_Axes_PlatformStepDown}"/>
                        </StackPanel>
                    </Border>

                    <!-- Jog Up/Down Controls (Right of Platform) -->
                    <Border Canvas.Top="365" Canvas.Left="504" Style="{StaticResource GlassCard}" Width="220" Padding="12" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionTitle}" Text="Ручное перемещение"/>
                            <local:OpcJogButton Title="Вверх" DisableTitle="False" Margin="0 4" StartImagePath="/images/arrow_top_64.png" Cmd="{x:Static opc2Lib:OpcCommands.Com_Axes_PlatformJogUp}"/>
                            <local:OpcJogButton Title="Вниз" DisableTitle="False" Margin="0 4" StartImagePath="/images/arrow_bottom_64.png" Cmd="{x:Static opc2Lib:OpcCommands.Com_Axes_PlatformJogDown}"/>
                        </StackPanel>
                    </Border>

                    <!-- Position Info Panel -->
                    <Border Canvas.Top="540" Canvas.Left="80" Style="{StaticResource ControlPanelCard}" Width="380">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionTitle}" Text="Позиция платформы"/>

                            <!-- Current Position -->
                            <Grid Margin="0 0 0 12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock FontSize="14" Foreground="White" FontWeight="SemiBold">Текущая позиция</TextBlock>
                                    <TextBlock FontSize="11" Foreground="#666666">мм</TextBlock>
                                </StackPanel>
                                <Border Grid.Column="1" Style="{StaticResource ValueDisplayCard}">
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                               FontSize="22" FontWeight="Bold" Text="{Binding CurrentPlatformStep}">
                                        <TextBlock.Foreground>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#ff6f00" Offset="0"/>
                                                <GradientStop Color="#ffb366" Offset="1"/>
                                            </LinearGradientBrush>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </Border>
                            </Grid>

                            <!-- Set Position -->
                            <Border Style="{StaticResource InteractiveCard}" Margin="0 0 0 12"
                                    MouseDown="SetStepMouseDown" TouchDown="SetStepTouchDown">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="14" Foreground="White" FontWeight="SemiBold">Заданная позиция</TextBlock>
                                        <TextBlock FontSize="11" Foreground="#666666">Нажмите для изменения</TextBlock>
                                    </StackPanel>
                                    <Border Grid.Column="1" Style="{StaticResource ValueDisplayCard}">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                                   FontSize="22" Foreground="White" FontWeight="Bold" Text="{Binding SetPlatformStep}"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Move to Bottom -->
                            <Border Style="{StaticResource InteractiveCard}" MouseDown="ExtremeToDown">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="14" Foreground="White" FontWeight="SemiBold">Крайнее нижнее</TextBlock>
                                        <TextBlock FontSize="11" Foreground="#666666">Опустить платформу</TextBlock>
                                    </StackPanel>
                                    <Border Grid.Column="1" Background="#2a2a2a" CornerRadius="10" Width="50" Height="50">
                                        <Image Width="24" Source="/images/arrow_bottom_64.png" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </Canvas>

                <!-- Right Column - Recoater Right Controls -->
                <StackPanel Grid.Column="2" Margin="0">
                    <StackPanel Orientation="Horizontal" Margin="70 200 0 0" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <local:OpcJogButton Title="Вправо" DisableTitle="True" Grid.Column="0" Margin="1 2 5 2" EndImagePath="/images/arrow_right_64.png" Cmd="{x:Static opc2Lib:OpcCommands.Com_Axes_RecoaterJogRight}"/>
                        <local:OpcJogButton Title="Крайнее положение" DisableTitle="False" Grid.Column="1" Margin="1 2 10 2" EndImagePath="/images/arrow_right_end_64.png" Cmd="{x:Static opc2Lib:OpcCommands.Com_Axes_RecoaterJogExtremeRight}"/>
                    </StackPanel>

                    <!-- Stop Button -->
                    <Canvas>
                        <local:OpcJogButton Canvas.Top="380" Canvas.Left="80" DisableTitle="False" Margin="1 2 10 2" EndImagePath="/images/stop_64.png" Cmd="{x:Static opc2Lib:OpcCommands.Com_Axes_Stop}"/>
                    </Canvas>
                </StackPanel>

                <!-- Dose Counter Panel -->
                <Canvas>
                    <Border Canvas.Top="20" Canvas.Left="550" Style="{StaticResource ControlPanelCard}" Width="180">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionTitle}" Text="Дозатор" HorizontalAlignment="Center"/>

                            <!-- Dose Count Value -->
                            <TextBlock Text="{Binding DoseCounts}" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 5">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#ff6f00" Offset="0"/>
                                        <GradientStop Color="#ffb366" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                            </TextBlock>
                            <TextBlock Text="Количество доз" FontSize="12" Foreground="#888888" HorizontalAlignment="Center" Margin="0 0 0 12"/>

                            <!-- Change Button -->
                            <Button Content="Изменить"
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding SelectDoseCountsCommand}"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                <b:InvokeCommandAction
                                    Command="{Binding DataContext.SelectDoseCountsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Border>
                </Canvas>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
