<UserControl x:Class="PrintMate.Terminal.Views.IndicatorPanelWithGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpf="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="400">

    <!-- Внешний Viewbox — масштабирует ВСЁ пропорционально -->

    <!-- Корневой Border растягивается на всю ширину -->
    <Border Padding="15" BorderBrush="#1e1e1e" BorderThickness="1" Margin="5" CornerRadius="10"> 
        <Border Background="#1A1818" Margin="1" Padding="5" CornerRadius="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid>

                <!-- Правая часть: заголовок и значение -->
                <StackPanel Margin="0,0,0,0" VerticalAlignment="Center">
                    <Border Background="Black" HorizontalAlignment="Stretch" Padding="10 15 10 15" CornerRadius="1">
                        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       FontSize="25"/>
                            <TextBlock Text="{Binding Format, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       FontWeight="Black"
                                       Foreground="Gray"
                                       Margin="0,2,0,0"
                                       FontSize="10"/>
                        </WrapPanel>
                    </Border>
                    <Border Background="#1e1e1e" HorizontalAlignment="Stretch" Padding="10 5 10 5" CornerRadius="1">
                        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   FontWeight="Black"
                                   Foreground="Gray"
                                   TextAlignment="Center"
                                   FontSize="15"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
    
</UserControl>