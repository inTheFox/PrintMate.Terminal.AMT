<UserControl x:Class="PrintMate.Terminal.Views.LeftBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrintMate.Terminal.Views"
             xmlns:viewModels="clr-namespace:PrintMate.Terminal.ViewModels"
             xmlns:views="clr-namespace:PrintMate.Terminal.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:opc2Lib="clr-namespace:Opc2Lib;assembly=Opc2Lib"
             xmlns:componentsViews="clr-namespace:PrintMate.Terminal.Views.ComponentsViews"
             mc:Ignorable="d"
             d:DesignHeight="768" d:DesignWidth="200">

    <UserControl.Resources>
        <!-- Animation -->
        <Storyboard x:Key="ShowMainView">
            <DoubleAnimation Storyboard.TargetName="mainViewGrid"
                             Storyboard.TargetProperty="Opacity"
                             To="1" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Modern Menu Item Style -->
        <Style x:Key="ModernMenuItem" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0f0f0f" Offset="0"/>
                        <GradientStop Color="#080808" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1a1a1a" Offset="0"/>
                        <GradientStop Color="#101010" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#181818" Offset="0"/>
                                <GradientStop Color="#0f0f0f" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#ff6f00" Offset="0"/>
                                <GradientStop Color="#cc5500" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="#ff6f00"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Logo Container Style -->
        <Style x:Key="LogoContainer" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0a0a0a" Offset="0"/>
                        <GradientStop Color="#050505" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <!--<Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#ff6f00" Offset="0"/>
                        <GradientStop Color="#cc5500" Offset="0.5"/>
                        <GradientStop Color="#ff6f00" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>-->
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <!--<Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.5" Color="#ff6f00"/>
                </Setter.Value>
            </Setter>-->
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="5 0 0 10"/>
        </Style>

        <!-- Favorites Container Style -->
        <Style x:Key="FavoritesContainer" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#080808" Offset="0"/>
                        <GradientStop Color="#040404" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1a1a1a" Offset="0"/>
                        <GradientStop Color="#0f0f0f" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="20"/>
        </Style>

        <!-- Icon Glow Effect -->
        <Style x:Key="IconGlow" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <RadialGradientBrush>
                        <GradientStop Color="#20ff6f00" Offset="0"/>
                        <GradientStop Color="#00ff6f00" Offset="1"/>
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
        </Style>

        <!-- Badge Style -->
        <Style x:Key="NotificationBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="MinWidth" Value="22"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,-6,-6,0"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#ff6f00" Offset="0"/>
                        <GradientStop Color="#e65c00" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.6" Color="#ff6f00"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Blocked Screen Style -->
        <Style x:Key="BlockedScreenCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1a0a0a" Offset="0"/>
                        <GradientStop Color="#0f0505" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#cc3333" Offset="0"/>
                        <GradientStop Color="#991a1a" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.25" Color="#ff4444"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource ShowMainView}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <!-- Main Container with Gradient Background -->
    <Border x:Name="mainViewGrid" Opacity="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#050505" Offset="0"/>
                <GradientStop Color="#030303" Offset="0.5"/>
                <GradientStop Color="#040404" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <StackPanel>
            <!-- Logo Section -->
            <Border Style="{StaticResource LogoContainer}"
                    MouseDown="OnClickToLogoType"
                    Margin="8 8 8 5">
                <Image Width="140" Source="/images/logo_full.png" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Border>

            <!-- Menu Section -->
            <StackPanel Margin="8 3 8 0">
                <!-- Profile Card -->
                <Border Style="{StaticResource ModernMenuItem}"
                        MouseDown="OnProfileClick"
                        Margin="0 0 0 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Profile Icon with Glow -->
                        <Border Style="{StaticResource IconGlow}" Margin="0 0 8 0" Width="36" Height="36">
                            <Image Source="/images/add_user_32.png" Width="20" Height="20"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>

                        <!-- User Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding UserFullName}"
                                       FontWeight="Bold"
                                       Foreground="#e0e0e0"
                                       FontSize="12"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding UserRole}"
                                       Foreground="#606060"
                                       FontSize="10"
                                       Margin="0 1 0 0"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>

                        <!-- Arrow Icon -->
                        <Border Grid.Column="2" Width="22" Height="22" CornerRadius="6"
                                Background="#15ff6f00" VerticalAlignment="Center">
                            <Rectangle Width="10" Height="10" Fill="#ff6f00">
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="/images/arrow_right_32.png"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Border>
                    </Grid>
                </Border>

                <!-- Monitoring Card -->
                <Border Style="{StaticResource ModernMenuItem}"
                        MouseDown="MonitorButtonCallback"
                        Margin="0 0 0 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Monitor Icon with Glow -->
                        <Border Style="{StaticResource IconGlow}" Margin="0 0 8 0" Width="36" Height="36">
                            <Image Source="/images/monitor.png" Width="20" Height="20"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Измерения"
                                       FontWeight="Bold"
                                       Foreground="#e0e0e0"
                                       FontSize="12"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="мониторинг"
                                       Foreground="#606060"
                                       FontSize="10"
                                       Margin="0 1 0 0"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>

                        <!-- Arrow Icon -->
                        <Border Grid.Column="2" Width="22" Height="22" CornerRadius="6"
                                Background="#15ff6f00" VerticalAlignment="Center">
                            <Rectangle Width="10" Height="10" Fill="#ff6f00">
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="/images/arrow_right_32.png"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Border>
                    </Grid>
                </Border>

                <!-- Notifications Card -->
                <Border Style="{StaticResource ModernMenuItem}"
                        MouseDown="OnNotificationsClick"
                        Margin="0 0 0 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Message Icon with Badge -->
                        <Grid Margin="0 0 8 0">
                            <Border Style="{StaticResource IconGlow}" Width="36" Height="36">
                                <Image Source="/images/message.png" Width="20" Height="20"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                            </Border>
                            <!-- Notification Badge -->
                            <Border Style="{StaticResource NotificationBadge}"
                                    Visibility="{Binding UnreadBadgeVisibility}">
                                <TextBlock Text="{Binding UnreadCountText}"
                                           FontSize="9"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Сообщения"
                                       FontWeight="Bold"
                                       Foreground="#e0e0e0"
                                       FontSize="12"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="важные уведомл."
                                       Foreground="#606060"
                                       FontSize="10"
                                       Margin="0 1 0 0"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>

                        <!-- Arrow Icon -->
                        <Border Grid.Column="2" Width="22" Height="22" CornerRadius="6"
                                Background="#15ff6f00" VerticalAlignment="Center">
                            <Rectangle Width="10" Height="10" Fill="#ff6f00">
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="/images/arrow_right_32.png"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Border>
                    </Grid>
                </Border>

                <!-- Blocked Screen Card (Hidden by default) -->
                <Border x:Name="BlockedScreenBorder"
                        Style="{StaticResource BlockedScreenCard}"
                        Visibility="Collapsed"
                        Margin="0 0 0 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Block Icon -->
                        <Border Width="36" Height="36" CornerRadius="10" Margin="0 0 8 0">
                            <Border.Background>
                                <RadialGradientBrush>
                                    <GradientStop Color="#30ff4444" Offset="0"/>
                                    <GradientStop Color="#00ff4444" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                            <Image Source="/images/block.png" Width="20" Height="20"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Заблокировано"
                                       FontWeight="Bold"
                                       Foreground="#cc5555"
                                       FontSize="11"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="переведите ключ"
                                       Foreground="#606060"
                                       FontSize="10"
                                       TextWrapping="NoWrap"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="0 1 0 0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Favorites Section -->
            <StackPanel Margin="8 5 8 0">
                <!-- Section Header -->
                <Grid Margin="0 0 0 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Accent Line -->
                    <Border Width="3" Height="16" CornerRadius="2" Margin="0 0 6 0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#ff6f00" Offset="0"/>
                                <GradientStop Color="#cc5500" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <TextBlock Grid.Column="1"
                               Text="Избранное"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#d0d0d0"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Favorites List Container -->
                <Border x:Name="FavoriteList" Style="{StaticResource FavoritesContainer}" Height="350" Padding="5">
                    <ScrollViewer PanningMode="Both"
                                  PanningRatio="0.5"
                                  VerticalScrollBarVisibility="Hidden"
                                  CanContentScroll="False"
                                  ManipulationBoundaryFeedback="ScrollViewer_ManipulationBoundaryFeedback">
                        <Grid>
                            <!-- Items List -->
                            <ItemsControl ItemsSource="{Binding Indicators}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <componentsViews:PLCDecimalViewWIthEdit CommandInfo="{Binding}" Margin="0 0 0 8"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Empty State -->
                            <StackPanel Visibility="{Binding NotFavouritesInfoVisibility}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Margin="0 80 0 0">
                                <!-- Empty Icon -->
                                <Border Width="50" Height="50" CornerRadius="25" Margin="0 0 0 10"
                                        HorizontalAlignment="Center">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#20ff6f00" Offset="0"/>
                                            <GradientStop Color="#10ff6f00" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="+" FontSize="24" FontWeight="Light"
                                               HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock.Foreground>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#ff6f00" Offset="0"/>
                                                <GradientStop Color="#ffb366" Offset="1"/>
                                            </LinearGradientBrush>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </Border>

                                <TextBlock Text="Список пуст"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#c0c0c0"
                                           HorizontalAlignment="Center"
                                           Margin="0 0 0 4"/>

                                <TextBlock Text="Перейдите в Измерения"
                                           FontSize="10"
                                           Foreground="#505050"
                                           TextAlignment="Center"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
