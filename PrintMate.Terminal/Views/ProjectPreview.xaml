<UserControl x:Class="PrintMate.Terminal.Views.ProjectPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920"
             Background="#252526">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 3D Viewport (HelixToolkit SharpDX) -->
        <Border Grid.Row="0" Background="#1E1E1E" BorderBrush="#00FF00" BorderThickness="2">
            <hx:Viewport3DX x:Name="Viewport" Background="White"
                            ShowCameraInfo="True"
                            ShowViewCube="False"
                            BackgroundColor="#1E1E1E"
                            EffectsManager="{Binding Layer3DViewModel.EffectsManager}"
                            ShowCoordinateSystem="True"
                            IsRotationEnabled="True"
                            IsZoomEnabled="True"
                            IsPanEnabled="True"
                            IsInertiaEnabled="True"
                            RotateAroundMouseDownPoint="False"
                            Height="500"
                            ZoomAroundMouseDownPoint="False">

                <hx:AmbientLight3D Color="White"/>
                <hx:DirectionalLight3D Direction="1,1,-1" Color="White"/>

                <!-- Платформа 320x320 мм (вращается) -->
                <hx:MeshGeometryModel3D Geometry="{Binding Layer3DViewModel.PlatformGeometry}"
                                        Transform="{Binding Layer3DViewModel.PlatformTransform}">
                    <hx:MeshGeometryModel3D.Material>
                        <hx:PhongMaterial DiffuseColor="Red"/>
                    </hx:MeshGeometryModel3D.Material>
                </hx:MeshGeometryModel3D>

                <hx:AxisPlaneGridModel3D AutoSpacing="True" FadingFactor="1"></hx:AxisPlaneGridModel3D>
                <!-- Реальная модель из CLI проекта -->
                <hx:MeshGeometryModel3D Geometry="{Binding Layer3DViewModel.PrintedLayersGeometry}"
                                        Material="{Binding Layer3DViewModel.PrintedLayersMaterial}"
                                        Transform="{Binding Layer3DViewModel.ModelTransform}"/>

            </hx:Viewport3DX>
        </Border>

        <!-- Панель управления камерой и вращением -->
        <Border Grid.Row="1"
                Background="#2D2D30"
                BorderBrush="#3E3E42"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Вращение платформы -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Вращение"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               Foreground="White"/>

                    <Slider Grid.Column="1"
                            Minimum="0"
                            Maximum="360"
                            Value="{Binding Layer3DViewModel.RotationAngle, Mode=TwoWay, FallbackValue=0}"
                            TickFrequency="45"
                            IsSnapToTickEnabled="False"
                            VerticalAlignment="Center"
                            Height="40"/>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="15,0,0,0">
                        <TextBlock Text="Угол: "
                                   Foreground="#999999"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Layer3DViewModel.RotationAngle, StringFormat={}{0:F0}°, FallbackValue=0°}"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Width="50"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Расстояние камеры -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Приближение"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               Foreground="White"/>

                    <Slider Grid.Column="1"
                            Minimum="50"
                            Maximum="1000"
                            Value="{Binding Layer3DViewModel.CameraDistance, Mode=TwoWay, FallbackValue=250}"
                            TickFrequency="50"
                            IsSnapToTickEnabled="False"
                            VerticalAlignment="Center"
                            Height="40"/>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="15,0,0,0">
                        <TextBlock Text="Расстояние: "
                                   Foreground="#999999"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Layer3DViewModel.CameraDistance, StringFormat={}{0:F0}мм, FallbackValue=250мм}"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Width="80"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Панель симуляции слоев -->
        <Border Grid.Row="2"
                Background="#2D2D30"
                BorderBrush="#3E3E42"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Текущий слой"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"
                           Foreground="White"/>

                <Slider Grid.Column="1"
                        Minimum="0"
                        Maximum="{Binding Layer3DViewModel.TotalLayers, Mode=OneWay, FallbackValue=100}"
                        Value="{Binding CurrentSimulationLayer, Mode=TwoWay, FallbackValue=0}"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        Height="40"/>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="15,0,0,0">
                    <TextBlock Text="Слой: "
                               Foreground="#999999"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentSimulationLayer, StringFormat={}{0}, FallbackValue=0}"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               Width="50"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" / "
                               Foreground="#999999"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Layer3DViewModel.TotalLayers, StringFormat={}{0}, FallbackValue=0}"
                               Foreground="#999999"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель управления печатью -->
        <Border Grid.Row="3"
                Background="#2D2D30"
                BorderBrush="#3E3E42"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Загрузить mybox.cli"
                        Command="{Binding LoadTestProjectCommand}"
                        Padding="15,10"
                        Margin="5"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"/>

                <Button Content="Начать симуляцию"
                        Command="{Binding StartSimulationCommand}"
                        Padding="15,10"
                        Margin="5"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"/>

                <Button Content="Пауза"
                        Command="{Binding PauseSimulationCommand}"
                        Padding="15,10"
                        Margin="5"
                        Background="#FF9800"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"/>

                <Button Content="Стоп"
                        Command="{Binding StopSimulationCommand}"
                        Padding="15,10"
                        Margin="5"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Информационная панель -->
        <Border Grid.Row="0"
                Background="#CC1E1E1E"
                Padding="15"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                CornerRadius="5"
                BorderBrush="#00FF00"
                BorderThickness="2">
            <StackPanel>
                <TextBlock Text="3D Визуализация"
                           Foreground="#00FF00"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <TextBlock Foreground="White" FontSize="12">
                    <Run Text="Платформа: 320x320 мм"/>
                </TextBlock>
                <TextBlock Foreground="White" FontSize="12">
                    <Run Text="Серая платформа вращается"/>
                </TextBlock>
                <TextBlock Foreground="White" FontSize="12">
                    <Run Text="Модель неподвижна на платформе"/>
                </TextBlock>
                <TextBlock Foreground="#00FF00" FontSize="12" Margin="0,10,0,0">
                    <Run Text="Используйте ползунки управления!"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
