<UserControl x:Class="PrintMate.Terminal.Views.ComponentsViews.BoolSwitchContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.ComponentsViews"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             >
    <Border Background="#161616" Padding="20" CornerRadius="5" Margin="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Grid.Column="0" FontSize="15" x:Name="TextBlock" TextAlignment="Left" HorizontalAlignment="Left" TextWrapping="Wrap" Foreground="White" Text="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type local:BoolSwitchContainer}}}"/>
            <ToggleButton x:Name="ToggleButton"  Grid.Column="1" IsChecked="{Binding IsChecked, RelativeSource={RelativeSource AncestorType={x:Type local:BoolSwitchContainer}}}" Margin="5" HorizontalAlignment="Center" Style="{StaticResource ToggleButtonSwitch}" hc:VisualElement.HighlightBrush="{DynamicResource SuccessBrush}"/>
        </Grid>


    </Border>
</UserControl>
