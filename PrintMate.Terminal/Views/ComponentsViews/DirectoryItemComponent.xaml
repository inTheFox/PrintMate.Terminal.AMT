<UserControl x:Class="PrintMate.Terminal.Views.ComponentsViews.DirectoryItemComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.ComponentsViews"
             mc:Ignorable="d" 
            >
    <Grid>
        <Border Background="#222222" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Image Width="30" Source="{Binding ImagePath, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                <TextBlock FontSize="15" Grid.Column="1" Margin="10 0 0 0" VerticalAlignment="Center" FontWeight="Bold" Foreground="White"  Text="{Binding Name, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
