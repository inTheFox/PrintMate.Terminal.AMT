<UserControl x:Class="PrintMate.Terminal.Views.ManualControlHubSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrintMate.Terminal.Views"
             mc:Ignorable="d" >
    <Grid MouseDown="UIElement_OnMouseDown">
        <Border Margin="5" Padding="5" CornerRadius="10" Background="#1A1818" MinWidth="300">
            <WrapPanel VerticalAlignment="Center">
                <Border Padding="5" Background="#040404" CornerRadius="5">
                    <Image Source="{Binding ImageSrc, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="30">
                    </Image>
                </Border>
                <TextBlock FontSize="20" FontWeight="Black" Margin="15 0 0 0" Foreground="White" VerticalAlignment="Center" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </WrapPanel>
        </Border>
    </Grid>
</UserControl>
