<UserControl x:Class="PrintMate.Terminal.Views.Pages.Project3DView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:PrintMate.Terminal.Controls"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             Background="#0a0a0a">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Slider Style -->
        <Style x:Key="LayerSliderStyle" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Track -->
                            <Border Grid.Row="1" Height="8" CornerRadius="4" Margin="10,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#252525" Offset="0"/>
                                        <GradientStop Color="#353535" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <Track Grid.Row="1" x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Grid>
                                                    <!-- Glow -->
                                                    <Ellipse Width="28" Height="28" Opacity="0.3">
                                                        <Ellipse.Fill>
                                                            <RadialGradientBrush>
                                                                <GradientStop Color="#FF6F00" Offset="0"/>
                                                                <GradientStop Color="Transparent" Offset="1"/>
                                                            </RadialGradientBrush>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <!-- Thumb -->
                                                    <Ellipse Width="20" Height="20" Cursor="Hand">
                                                        <Ellipse.Fill>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                <GradientStop Color="#FF8C00" Offset="0"/>
                                                                <GradientStop Color="#CC7000" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Ellipse.Fill>
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect Color="#FF6F00" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="12" BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#2a2a2a" Offset="0"/>
                                    <GradientStop Color="#1a1a1a" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#404040" Offset="0"/>
                                    <GradientStop Color="#202020" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#3a3a3a" Offset="0"/>
                                            <GradientStop Color="#2a2a2a" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#FF6F00"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#1a1a1a" Offset="0"/>
                                            <GradientStop Color="#0a0a0a" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 3D Viewport -->
        <Grid Grid.Row="0">
            <Border ClipToBounds="True" Background="#0a0a0a">
                <!-- DX11 Viewport -->
                <controls:DX11ViewportControl x:Name="Viewport"
                                              ShowInfo="False"
                                              Background="Black"/>
            </Border>

            <!-- Градиенты для визуального эффекта --><!--
            <Image IsHitTestVisible="False" Source="/images/gradient.png"
                   HorizontalAlignment="Left" Stretch="Fill"
                   Width="1800" Opacity="0.8"/>
            <Image IsHitTestVisible="False" Source="/images/gradient.png"
                   HorizontalAlignment="Left" Stretch="Fill"
                   Width="1800" Opacity="0.8"/>
            <Image IsHitTestVisible="False" Source="/images/gradient.png"
                   HorizontalAlignment="Right" Stretch="Fill"
                   Width="1200" Opacity="0.5">
            </Image>-->

            <!-- Loading Overlay -->
            <Border Background="#DD0a0a0a"
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Loading Spinner -->
                    <Viewbox Width="70" Height="70" Margin="0,0,0,20">
                        <Canvas Width="100" Height="100">
                            <Ellipse Width="100" Height="100"
                                     Stroke="#FF8C00"
                                     StrokeThickness="6"
                                     StrokeDashArray="200 200">
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="LoadingSpinner" CenterX="50" CenterY="50"/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="LoadingSpinner"
                                                                 Storyboard.TargetProperty="Angle"
                                                                 From="0" To="360"
                                                                 Duration="0:0:1.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                        </Canvas>
                    </Viewbox>

                    <TextBlock Text="{Binding LoadingMessage}"
                               FontSize="16" FontWeight="SemiBold"
                               Foreground="#f0f0f0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Info Panel (top-left) -->
            <Border CornerRadius="10" Padding="15,10" Margin="20"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Background="#CC1a1a1a">
                <StackPanel>
                    <TextBlock Text="{Binding ProjectName}" FontSize="14" FontWeight="SemiBold" Foreground="#FF8C00" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Слоев: " FontSize="13" Foreground="#808080"/>
                        <TextBlock Text="{Binding TotalLayers}" FontSize="13" FontWeight="SemiBold" Foreground="#f0f0f0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                        <TextBlock Text="Высота: " FontSize="13" Foreground="#808080"/>
                        <TextBlock Text="{Binding ProjectHeight, StringFormat={}{0:F2} мм}" FontSize="13" FontWeight="SemiBold" Foreground="#f0f0f0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Camera Controls (top-right) -->
            <StackPanel Orientation="Horizontal" Margin="20"
                        HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button Style="{StaticResource ControlButton}" Command="{Binding ResetCameraCommand}" ToolTip="Сбросить камеру" Margin="0,0,8,0">
                    <TextBlock Text="R" FontSize="16" FontWeight="Bold" Foreground="#c0c0c0"/>
                </Button>
                <Button Style="{StaticResource ControlButton}" Command="{Binding TopViewCommand}" ToolTip="Вид сверху">
                    <TextBlock Text="T" FontSize="16" FontWeight="Bold" Foreground="#c0c0c0"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Layer Control Panel -->
        <Border Grid.Row="1" Padding="25,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#151210" Offset="0"/>
                    <GradientStop Color="#0c0a08" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Previous Layer Button -->
                <Button Grid.Column="0" Style="{StaticResource ControlButton}"
                        Command="{Binding PreviousLayerCommand}"
                        ToolTip="Предыдущий слой" Margin="0,0,20,0">
                    <TextBlock Text="&#x25C4;" FontSize="18" Foreground="#c0c0c0"/>
                </Button>

                <!-- Slider and Info -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Current Layer Info -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                        <TextBlock Text="Слой " FontSize="16" Foreground="#808080" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentLayerIndex}" FontSize="22" FontWeight="Bold" Foreground="#FF8C00" VerticalAlignment="Center"/>
                        <TextBlock Text=" / " FontSize="16" Foreground="#505050" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalLayers}" FontSize="18" FontWeight="SemiBold" Foreground="#c0c0c0" VerticalAlignment="Center"/>

                        <Rectangle Width="1" Height="20" Fill="#303030" Margin="20,0"/>

                        <TextBlock Text="Z: " FontSize="14" Foreground="#606060" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentLayerZ, StringFormat={}{0:F3} мм}"
                                   FontSize="14" FontWeight="SemiBold" Foreground="#a0a0a0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Layer Slider -->
                    <Slider Grid.Row="1"
                            Style="{StaticResource LayerSliderStyle}"
                            Value="{Binding CurrentLayerIndex, Mode=TwoWay}"
                            Minimum="1"
                            Maximum="{Binding TotalLayers}"
                            IsSnapToTickEnabled="True"
                            TickFrequency="1"/>
                </Grid>

                <!-- Next Layer Button -->
                <Button Grid.Column="2" Style="{StaticResource ControlButton}"
                        Command="{Binding NextLayerCommand}"
                        ToolTip="Следующий слой" Margin="20,0,0,0">
                    <TextBlock Text="&#x25BA;" FontSize="18" Foreground="#c0c0c0"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
