<UserControl x:Class="PrintMate.Terminal.Views.Configure.ConfigureParametersViews.ConfigureParametersCamera"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.Configure.ConfigureParametersViews"
             xmlns:componentsViews="clr-namespace:PrintMate.Terminal.Views.ComponentsViews"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="20" Margin="10,10,10,0">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Настройка камеры"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#FF8C00"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Выберите камеру для видеонаблюдения"
                           FontSize="14"
                           Foreground="#CCCCCC"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <StackPanel>
                <!-- Выбор камеры -->
                <Border Background="#2D2D30" Padding="20" Margin="0,10,0,10" CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="8" ShadowDepth="2"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Иконка и заголовок -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <Ellipse Width="40" Height="40" Fill="#FF8C00" Margin="0,0,15,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#FF8C00" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Выбор камеры"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="Выберите камеру из списка доступных устройств"
                                           FontSize="12"
                                           Foreground="#999999"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Текущая выбранная камера -->
                        <Border Grid.Row="1"
                                Background="#3E3E42"
                                Padding="15"
                                CornerRadius="6"
                                Margin="0,0,0,15"
                                BorderBrush="#FF8C00"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Grid.Column="0"
                                         Width="12"
                                         Height="12"
                                         Fill="#00FF00"
                                         Margin="0,0,12,0"
                                         VerticalAlignment="Center">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#00FF00" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                    </Ellipse.Effect>
                                </Ellipse>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Активная камера"
                                               FontSize="11"
                                               Foreground="#999999"
                                               Margin="0,0,0,3"/>
                                    <TextBlock Text="{Binding SelectedCameraText}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Список доступных камер -->
                        <Border Grid.Row="2"
                                Background="#252526"
                                CornerRadius="6"
                                Padding="15"
                                BorderBrush="#3E3E42"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Доступные камеры"
                                           FontSize="12"
                                           Foreground="#999999"
                                           Margin="0,0,0,10"/>
                                <ItemsControl ItemsSource="{Binding AvailableCameras}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="CameraCard"
                                                    Background="#3E3E42"
                                                    CornerRadius="6"
                                                    Padding="15"
                                                    Margin="0,0,0,10"
                                                    BorderBrush="#FF8C00"
                                                    BorderThickness="0">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="2" Opacity="0.3"/>
                                                </Border.Effect>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Иконка камеры -->
                                                    <Border x:Name="CameraIcon"
                                                            Grid.Column="0"
                                                            Width="40"
                                                            Height="40"
                                                            Background="#FF8C00"
                                                            CornerRadius="20"
                                                            Margin="0,0,15,0">
                                                        <Border.Effect>
                                                            <DropShadowEffect Color="#FF8C00" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                                                        </Border.Effect>
                                                        <TextBlock Text="📷"
                                                                   FontSize="20"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>

                                                    <!-- Информация о камере -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontSize="16"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"
                                                                   Margin="0,0,0,3"/>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="ID: "
                                                                       FontSize="11"
                                                                       Foreground="#999999"/>
                                                            <TextBlock Text="{Binding Id}"
                                                                       FontSize="11"
                                                                       Foreground="#CCCCCC"
                                                                       Margin="2,0,0,0"/>
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <!-- Кнопка выбора / Индикатор выбора -->
                                                    <Button x:Name="SelectButton"
                                                            Grid.Column="2"
                                                            Command="{Binding DataContext.SelectCameraCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Height="40"
                                                            MinWidth="120"
                                                            Background="#FF8C00"
                                                            Foreground="Black"
                                                            FontWeight="SemiBold"
                                                            FontSize="13"
                                                            BorderThickness="0"
                                                            Cursor="Hand">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Background" Value="#FF8C00"/>
                                                                <Setter Property="Foreground" Value="Black"/>
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border x:Name="ButtonBorder"
                                                                                    Background="{TemplateBinding Background}"
                                                                                    CornerRadius="6"
                                                                                    Padding="15,10">
                                                                                <Border.Effect>
                                                                                    <DropShadowEffect Color="#FF8C00" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                                                                </Border.Effect>
                                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                                  VerticalAlignment="Center"/>
                                                                            </Border>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsEnabled" Value="False">
                                                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#00FF00"/>
                                                                                    <Setter TargetName="ButtonBorder" Property="Opacity" Value="1"/>
                                                                                    <Setter Property="Cursor" Value="Arrow"/>
                                                                                </Trigger>
                                                                                <MultiTrigger>
                                                                                    <MultiTrigger.Conditions>
                                                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                                                        <Condition Property="IsEnabled" Value="True"/>
                                                                                    </MultiTrigger.Conditions>
                                                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#FFA500"/>
                                                                                </MultiTrigger>
                                                                                <MultiTrigger>
                                                                                    <MultiTrigger.Conditions>
                                                                                        <Condition Property="IsPressed" Value="True"/>
                                                                                        <Condition Property="IsEnabled" Value="True"/>
                                                                                    </MultiTrigger.Conditions>
                                                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#FF7F00"/>
                                                                                </MultiTrigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </Button.Style>
                                                        <TextBlock x:Name="ButtonText" Text="Выбрать" FontSize="13" FontWeight="SemiBold"/>
                                                    </Button>
                                                </Grid>
                                            </Border>

                                            <DataTemplate.Triggers>
                                                <!-- Когда камера выбрана -->
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter TargetName="CameraCard" Property="BorderThickness" Value="2"/>
                                                    <Setter TargetName="CameraCard" Property="BorderBrush" Value="#00FF00"/>
                                                    <Setter TargetName="CameraIcon" Property="Background" Value="#00FF00"/>
                                                    <Setter TargetName="SelectButton" Property="IsEnabled" Value="False"/>
                                                    <Setter TargetName="ButtonText" Property="Text" Value="✓ Выбрано"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Информация -->
                <Border Background="#2D2D30" Padding="15" CornerRadius="8" Margin="0,0,0,10">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="8" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="24" Height="24" Fill="#FFA500" Margin="0,0,12,0" VerticalAlignment="Top"/>
                        <StackPanel>
                            <TextBlock Text="Информация"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap"
                                       Foreground="#CCCCCC"
                                       FontSize="12"
                                       LineHeight="18">
                                <Run Text="• Разрешение камеры: 2048 x 1536 пикселей"/><LineBreak/>
                                <Run Text="• Частота кадров: 60 FPS"/><LineBreak/>
                                <Run Text="• Нажмите 'Выбрать камеру' для изменения активного устройства"/><LineBreak/>
                                <Run Text="• Список обновляется автоматически при подключении новых камер"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
