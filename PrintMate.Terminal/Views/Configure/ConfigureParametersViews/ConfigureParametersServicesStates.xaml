<UserControl x:Class="PrintMate.Terminal.Views.Configure.ConfigureParametersViews.ConfigureParametersServicesStates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.Configure.ConfigureParametersViews"
             xmlns:componentsViews="clr-namespace:PrintMate.Terminal.Views.ComponentsViews"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">

    <ScrollViewer PanningMode="Both" VerticalScrollBarVisibility="Hidden" ManipulationBoundaryFeedback="ScrollViewer_ManipulationBoundaryFeedback"
                  PanningRatio="1.0"
                  CanContentScroll="False">
        <StackPanel>
            <!-- Заголовок и статус Observer -->
            <componentsViews:Container Title="Состояние сервисов" Margin="5 10 10 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Статус Observer -->
                    <Border Background="#161616" Padding="15" CornerRadius="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Foreground="White" FontSize="15" FontWeight="Bold" VerticalAlignment="Center">Статус Observer</TextBlock>
                            <WrapPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock FontWeight="Bold" Foreground="{Binding ObserverStatusColor}" Text="{Binding ObserverStatusText}"/>
                                <Image Margin="15 0 0 0" Width="16" Source="{Binding ObserverStatusIcon}"/>
                            </WrapPanel>
                        </Grid>
                    </Border>

                    <!-- Кнопка обновления -->
                    <Button Grid.Column="1" Command="{Binding RefreshCommand}"
                            Height="45" Padding="25 0" Margin="10 0 0 0"
                            Content="Обновить"
                            Style="{StaticResource ButtonPrimary}"/>
                </Grid>
            </componentsViews:Container>

            <!-- Список сервисов -->
            <componentsViews:Container Title="Сервисы" Margin="5 10 10 0">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding Services}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#161616" Padding="15" Margin="0 0 0 10" CornerRadius="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Индикатор статуса -->
                                        <Image Grid.Column="0" Width="32" Height="32"
                                               VerticalAlignment="Center" Margin="0 0 15 0"
                                               Source="{Binding StatusIconSource}"/>

                                        <!-- Информация о сервисе -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <!-- ID и статус -->
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Foreground="White" FontSize="16" FontWeight="Bold"
                                                           Text="{Binding Id}"/>
                                                <TextBlock Margin="15 0 0 0" FontWeight="Bold" FontSize="14"
                                                           Foreground="{Binding StatusColor}"
                                                           Text="{Binding StatusText}"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Margin="10 0 0 0" Foreground="Gray" FontSize="12"
                                                           VerticalAlignment="Center"
                                                           Text="{Binding ProcessIdText}"/>
                                            </StackPanel>

                                            <!-- URL -->
                                            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                                <TextBlock Foreground="Gray" FontSize="12" Text="URL: "/>
                                                <TextBlock Foreground="#4da6ff" FontSize="12" Text="{Binding Url}"/>
                                            </StackPanel>

                                            <!-- Аргументы -->
                                            <StackPanel Orientation="Horizontal" Margin="0 3 0 0"
                                                        Visibility="{Binding HasArguments}">
                                                <TextBlock Foreground="Gray" FontSize="11" Text="Аргументы: "/>
                                                <TextBlock Foreground="LightGray" FontSize="11" Text="{Binding StartupArguments}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Кнопки управления -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <!-- Запустить -->
                                            <Button Command="{Binding StartCommand}"
                                                    Width="100" Height="36" Margin="0 0 5 0"
                                                    Content="Запустить"
                                                    Style="{StaticResource ButtonSuccess}"/>

                                            <!-- Остановить -->
                                            <Button Command="{Binding StopCommand}"
                                                    Width="100" Height="36" Margin="0 0 5 0"
                                                    Content="Остановить"
                                                    Style="{StaticResource ButtonDanger}"/>

                                            <!-- Перезапустить -->
                                            <Button Command="{Binding RestartCommand}"
                                                    Width="120" Height="36"
                                                    Content="Перезапустить"
                                                    Style="{StaticResource ButtonWarning}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Сообщение если сервисов нет -->
                    <TextBlock Foreground="Gray" FontSize="14" TextAlignment="Center" Margin="0 20"
                               Text="{Binding EmptyMessage}"
                               Visibility="{Binding ShowEmptyMessage}"/>
                </StackPanel>
            </componentsViews:Container>

            <!-- Статистика -->
            <componentsViews:Container Title="Статистика" Margin="5 10 10 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#161616" Padding="20" Margin="0 0 5 0" CornerRadius="10">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Foreground="White" FontSize="28" FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Text="{Binding TotalCount}"/>
                            <TextBlock Foreground="Gray" FontSize="12" HorizontalAlignment="Center" Text="Всего сервисов"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="#161616" Padding="20" Margin="5 0" CornerRadius="10">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Foreground="LimeGreen" FontSize="28" FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Text="{Binding RunningCount}"/>
                            <TextBlock Foreground="Gray" FontSize="12" HorizontalAlignment="Center" Text="Запущено"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#161616" Padding="20" Margin="5 0 0 0" CornerRadius="10">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Foreground="IndianRed" FontSize="28" FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Text="{Binding StoppedCount}"/>
                            <TextBlock Foreground="Gray" FontSize="12" HorizontalAlignment="Center" Text="Остановлено"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </componentsViews:Container>
        </StackPanel>
    </ScrollViewer>
</UserControl>
