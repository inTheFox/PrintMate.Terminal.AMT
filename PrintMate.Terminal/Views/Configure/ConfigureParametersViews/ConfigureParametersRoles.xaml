<UserControl x:Class="PrintMate.Terminal.Views.Configure.ConfigureParametersViews.ConfigureParametersRoles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.Configure.ConfigureParametersViews"
             mc:Ignorable="d" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Padding="5" Background="#0b0b0b" Margin="20" CornerRadius="15">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" Margin="0 50 0 0" Foreground="White" FontWeight="Black" FontSize="25">Роли</TextBlock>

                <Grid HorizontalAlignment="Center" Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Кнопка "Добавить" -->
                    <Button Grid.Column="0" Margin="5,0,5,0" Height="40" Width="80" Content="Добавить" Command="{Binding CreateRolesCommand}" VerticalAlignment="Top">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#ff6f00"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                                    <Setter Property="Foreground" Value="#666666"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Кнопка "Редактировать" -->
                    <Button Grid.Column="1" Margin="5,0,5,0" Height="40" Width="115" Content="Редактировать" Command="{Binding EditRoleCommand}" IsEnabled="{Binding IsRoleSelected}" VerticalAlignment="Top">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#ff6f00"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                                    <Setter Property="Foreground" Value="#666666"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Кнопка "Удалить" -->
                    <Button Grid.Column="2" Margin="5,0,5,0" Height="40" Width="80" Content="Удалить" Command="{Binding DeleteRoleCommand}" IsEnabled="{Binding IsRoleSelected}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#ff6f00"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                                    <Setter Property="Foreground" Value="#666666"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                <Border Padding="50 20 30 20" Background="#0e0e0e" Margin="30 30 30 0"  Visibility="{Binding RolesListVisibility}" CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Foreground="White" FontWeight="Bold" FontSize="15" Text="Название Роли"/>
                        <TextBlock Grid.Column="1" Foreground="White" FontWeight="Bold" FontSize="15" Text="id"/>
                    </Grid>
                </Border>
                <Border Padding="25">
                    <ListBox ItemsSource="{Binding Roles}"
                Margin="0 -10 0 0"
                SelectedItem="{Binding SelectedRole}"
                BorderThickness="0"
                Background="Transparent"
                VerticalAlignment="Top"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                Visibility="{Binding RolesListVisibility}">

                        <!-- Стиль контейнера элемента (ListBoxItem) -->
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border CornerRadius="10" x:Name="itemBorder" Padding="20" Margin="5">
                                                <Border.Background>
                                                    <SolidColorBrush x:Name="itemBorderBrush" Color="#0e0e0e"/>
                                                </Border.Background>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock x:Name="RoleNameText" Grid.Column="0" FontWeight="Bold" FontSize="15" Text="{Binding DisplayName}">
                                                        <TextBlock.Foreground>
                                                            <SolidColorBrush x:Name="RoleNameTextBrush" Color="White"/>
                                                        </TextBlock.Foreground>
                                                    </TextBlock>
                                                    <TextBlock x:Name="RolePermsText" Grid.Column="1" FontWeight="Bold" FontSize="15" Text="{Binding Name}">
                                                        <TextBlock.Foreground>
                                                            <SolidColorBrush x:Name="RolePermsTextBrush" Color="White"/>
                                                        </TextBlock.Foreground>
                                                    </TextBlock>
                                                </Grid>

                                                <i:Interaction.Triggers>
                                                    <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                                        <i:InvokeCommandAction
                                            Command="{Binding DataContext.SelectRole, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" />
                                                    </i:EventTrigger>
                                                </i:Interaction.Triggers>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="itemBorderBrush" Storyboard.TargetProperty="Color" To="#ff6f00" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetName="RoleNameTextBrush" Storyboard.TargetProperty="Color" To="Black" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetName="RolePermsTextBrush" Storyboard.TargetProperty="Color" To="Black" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="itemBorderBrush" Storyboard.TargetProperty="Color" To="#0e0e0e" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetName="RoleNameTextBrush" Storyboard.TargetProperty="Color" To="White" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetName="RolePermsTextBrush" Storyboard.TargetProperty="Color" To="White" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                    <!-- Свечение -->
                                                    <Setter TargetName="itemBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.6" Color="#ff6f00"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <!--<Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="itemBorder" Property="BorderBrush" Value="Transparent"/>
                                                    <Setter TargetName="itemBorder" Property="BorderThickness" Value="2"/>
                                                </Trigger>-->
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.Template>
                            <ControlTemplate TargetType="ListBox">
                                <ItemsPresenter />
                            </ControlTemplate>
                        </ListBox.Template>
                    </ListBox>
                </Border>
                <TextBlock Text="Список ролей пуст"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="White"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Visibility="{Binding EmptyListVisibility}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
