                </Trigger>
            </Style.Triggers>
        </Style>-->

        <!-- Стиль для DatePicker -->
        <!--
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>

        -->
        <!-- Стиль для календаря DatePicker -->
        <!--
        <Style TargetType="CalendarDayButton">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0E639C"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>-->

        <!-- Стиль для календаря -->
        <Style TargetType="Calendar">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель фильтров -->
        <Border Grid.Row="0"
                Background="#252526"
                Padding="15"
                CornerRadius="4"
                Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!-- Фильтр по дате начала -->
                <!--<TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Start Date:"
                           Foreground="#CCCCCC"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           FontFamily="Consolas"/>
                <DatePicker Grid.Row="0" Grid.Column="1"
                            SelectedDate="{Binding StartDate, Mode=TwoWay}"
                            Background="#3C3C3C"
                            Foreground="#CCCCCC"
                            Margin="0,0,20,0"/>-->

                <hc:DatePicker  Grid.Row="0" Foreground="Gray" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="0" hc:InfoElement.ShowClearButton="True" SelectedDate="{Binding StartDate, Mode=TwoWay}" hc:InfoElement.Title="Start date" Margin="10,0,10,0"/>

                <!-- Фильтр по дате окончания -->
                <!--<TextBlock Grid.Row="0" Grid.Column="2"
                           Text="End Date:"
                           Foreground="#CCCCCC"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           FontFamily="Consolas"/>-->
                <!--<DatePicker Grid.Row="0" Grid.Column="3"
                            SelectedDate="{Binding EndDate, Mode=TwoWay}"
                            Background="#3C3C3C"
                            Foreground="#CCCCCC"
                            Margin="0,0,20,0"/>-->

                <hc:DatePicker Grid.Row="0" Grid.Column="1" Foreground="Gray" HorizontalAlignment="Stretch" VerticalAlignment="Center" hc:InfoElement.ShowClearButton="True" SelectedDate="{Binding EndDate, Mode=TwoWay}" hc:InfoElement.Title="End date" Margin="10,0,10,0"/>

                <!-- Фильтр по уровню -->
                <!--
                <TextBlock Grid.Row="0" Grid.Column="4"
                           Text="Min Level:"
                           Foreground="#CCCCCC"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           FontFamily="Consolas"/>
                <ComboBox Grid.Row="0" Grid.Column="5"
                          ItemsSource="{Binding LogLevels}"
                          SelectedItem="{Binding SelectedLogLevelItem, Mode=TwoWay}"
                          DisplayMemberPath="Name"
                          Background="#3C3C3C"
                          Foreground="#CCCCCC"
                          Margin="0,0,20,0"/>-->

                <!--<ComboBox DisplayMemberPath="Name" Foreground="Black" Background="Black" VerticalAlignment="Center" Grid.Row="0" Grid.Column="5" ItemsSource="{Binding LogLevels}" SelectedItem="{Binding SelectedLogLevelItem, Mode=TwoWay}" hc:InfoElement.Title="Log level" Margin="0,0,0,0" Text=""/>-->
                <ComboBox Grid.Row="0" Grid.Column="2" Foreground="Gray" DisplayMemberPath="Name" hc:DropDownElement.ConsistentWidth="False" ItemsSource="{Binding LogLevels}" SelectedItem="{Binding SelectedLogLevelItem, Mode=TwoWay}" hc:InfoElement.Title="Level" Style="{StaticResource ComboBoxExtend}" Margin="10,0,10,0" Text="Level"/>
                <!-- Кнопка обновления -->
                <Button Grid.Row="0" Grid.Column="3"
                        Content="Refresh"
                        Command="{Binding RefreshCommand}"
                        Background="#0E639C"
                        Foreground="White"
                        Padding="20,8"
                        FontFamily="Consolas"
                        FontWeight="Bold"
                        Margin="10"
                        Cursor="Hand"/>

                <!-- Поиск -->
                <!--<TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Search:"
                           Foreground="#CCCCCC"
                           VerticalAlignment="Center"
                           Margin="0,10,10,0"
                           FontFamily="Consolas"/>-->

                <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Search:"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"
                               Margin="0,10,10,0"
                               FontFamily="Consolas"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Background="#3C3C3C"
                             Foreground="#CCCCCC"
                             Padding="8,5"
                             Margin="0,10,20,0"
                             FontFamily="Consolas"/>
                </Grid>

                <Button Grid.Row="1" Grid.Column="3"
                        Content="Search"
                        Command="{Binding LoadLogsCommand}"
                        Background="#0E639C"
                        Foreground="White"
                        Padding="20,8"
                        Margin="0,10,0,0"
                        FontFamily="Consolas"
                        FontWeight="Bold"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Консольный вывод логов -->
        <Border Grid.Row="1"
                Background="#0C0C0C"
                BorderBrush="#3F3F46"
                BorderThickness="1"
                CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Logs}"
                              Padding="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#2A2A2A"
                                    BorderThickness="0,0,0,1"
                                    Padding="5,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Timestamp -->
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}"
                                               Foreground="#858585"
                                               FontFamily="Consolas"
                                               FontSize="13"
                                               VerticalAlignment="Top"/>

                                    <!-- Level -->
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding LevelText}"
                                               Foreground="{Binding LevelColor}"
                                               FontFamily="Consolas"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               VerticalAlignment="Top"
                                               Margin="5,0"/>

                                    <!-- Category -->
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Application}"
                                               Foreground="#569CD6"
                                               FontFamily="Consolas"
                                               FontSize="13"
                                               VerticalAlignment="Top"
                                               Margin="5,0"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- Message -->
                                    <StackPanel Grid.Column="3" Margin="5,0">
                                        <TextBlock Text="{Binding Message}"
                                                   Foreground="#D4D4D4"
                                                   FontFamily="Consolas"
                                                   FontSize="13"
                                                   TextWrapping="Wrap"/>

                                        <!-- Exception (если есть) -->
                                        <TextBlock Text="{Binding Exception}"
                                                   Foreground="#F48771"
                                                   FontFamily="Consolas"
                                                   FontSize="11"
                                                   TextWrapping="Wrap"
                                                   Margin="0,5,0,0"
                                                   Visibility="{Binding Exception, Converter={StaticResource NullToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Пагинация -->
        <Border Grid.Row="2"
                Background="#252526"
                Padding="15"
                CornerRadius="4"
                Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Левая часть - информация -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Total: "
                               Foreground="#CCCCCC"
                               FontFamily="Consolas"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalCount}"
                               Foreground="#4EC9B0"
                               FontFamily="Consolas"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" logs | Page "
                               Foreground="#CCCCCC"
                               FontFamily="Consolas"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentPage}"
                               Foreground="#4EC9B0"
                               FontFamily="Consolas"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" of "
                               Foreground="#CCCCCC"
                               FontFamily="Consolas"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalPages}"
                               Foreground="#4EC9B0"
                               FontFamily="Consolas"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Правая часть - навигация -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="◄ Предыдущая"
                            Command="{Binding PreviousPageCommand}"
                            Background="#3C3C3C"
                            Foreground="#CCCCCC"
                            Padding="15,8"
                            Margin="0,0,10,0"
                            Cursor="Hand"/>
                    <Button Content="Следующая ►"
                            Command="{Binding NextPageCommand}"
                            Background="#3C3C3C"
                            Foreground="#CCCCCC"
                            Padding="15,8"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Индикатор загрузки -->
        <Grid Grid.Row="0" Grid.RowSpan="3"
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="#2D2D30"
                    Padding="30,20"
                    CornerRadius="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Загрузка логов"
                               Foreground="#CCCCCC"
                               FontFamily="Consolas"
                               FontSize="16"
                               HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True"
                                 Height="4"
                                 Width="200"
                                 Margin="0,10,0,0"
                                 Foreground="#0E639C"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
