<UserControl x:Class="PrintMate.Terminal.Views.Configure.ConfigureParametersViews.ConfigureParametersComputerVision"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:componentsViews="clr-namespace:PrintMate.Terminal.Views.ComponentsViews"
             mc:Ignorable="d" 
             d:DesignHeight="1045" d:DesignWidth="1079">
    <Grid>
        <ScrollViewer PanningMode="Both" CanContentScroll="False">
            <StackPanel Margin="10">
                <componentsViews:Container Title="Пути к маске и калибровочному файлу" TitleSize="15">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#161616" Padding="15" CornerRadius="10" Margin="5">
                                <TextBlock Text="{Binding RoiMaskPath}" FontWeight="Bold" FontSize="14" Foreground="White"/>
                            </Border>

                            <Button Grid.Column="1" Command="{Binding PickROIMaskCommand}"
                                        Height="45" Padding="25 0"  Margin="5"
                                        Content="Изменить"
                                        Style="{StaticResource ButtonPrimary}"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#161616" Padding="15" CornerRadius="10" Margin="5">
                                <TextBlock Text="{Binding CalibrationSettingsPath}" FontWeight="Bold" FontSize="14" Foreground="White"/>
                            </Border>

                            <Button Grid.Column="1" Command="{Binding PickCalibrationSettingsCommand}"
                                Height="45" Padding="25 0" Margin="5"
                                Content="Изменить"
                                Style="{StaticResource ButtonPrimary}"/>
                        </Grid>
                    </StackPanel>
                </componentsViews:Container>
                <componentsViews:Container Title="Правила для обнаружения дефектов" TitleSize="15">
                    <componentsViews:BoolSwitchContainer Title="Линия ракеля" IsChecked="{Binding IsRepeatedRecoaterStripe, Mode=TwoWay}"/>
                    <componentsViews:BoolSwitchContainer Title="Отслоение детали" IsChecked="{Binding IsPartDelamination, Mode=TwoWay}"/>
                    <componentsViews:BoolSwitchContainer Title="Недостаток порошка" IsChecked="{Binding IsLackOfPowder, Mode=TwoWay}"/>
                    <componentsViews:BoolSwitchContainer Title="Посторонние объекты" IsChecked="{Binding IsPlatformAnomaly, Mode=TwoWay}"/>
                </componentsViews:Container>
                <componentsViews:Container Title="Настройки для правил" TitleSize="15">
                    <componentsViews:EditboxKeyboard Label="Количество последних слоёв для хранения" ValueType="UShort" Value="{Binding ObserveLayersCount, Mode=TwoWay}"/>
                    <componentsViews:EditboxKeyboard Label="Дефектов линии ракеля подряд для обнаружения" ValueType="UShort" Value="{Binding CountLayerWithDefectRakel, Mode=TwoWay}"/>
                    <componentsViews:EditboxKeyboard Label="Минимальная площадь отслоения детали (мм^2)" ValueType="UShort" Value="{Binding MinAreaMm2PartDelamination, Mode=TwoWay}"/>
                    <componentsViews:EditboxKeyboard Label="Минимальная площадь постороннего объекта (мм^2)" ValueType="UShort" Value="{Binding MinAreaMm2PlatformAnomaly, Mode=TwoWay}"/>
                    <componentsViews:EditboxKeyboard Label="Минимальный процент недостатка порошка на платформе" ValueType="UShort" Value="{Binding PercentAreaLackOfPowder, Mode=TwoWay}"/>
                </componentsViews:Container>
                <componentsViews:Container Title="Папка с контурами" TitleSize="15">
                    <componentsViews:BoolSwitchContainer Title="Сохранять изображения с контурами при печати" IsChecked="{Binding IsLayerContoursFolder, Mode=TwoWay}"/>
                    <StackPanel Visibility="{Binding LayerContoursFolderVisibility}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                            <Border Background="#161616" Padding="15" CornerRadius="10" Margin="5">
                                    <TextBlock Text="{Binding LayerContoursFolder}" FontWeight="Bold" FontSize="14" Foreground="White"/>
                                </Border>

                                <Button Grid.Column="1" Command="{Binding PickLayerContoursCommand}"
                                    Height="45" Padding="25 0" Margin="5"
                                    Content="Изменить"
                                    Style="{StaticResource ButtonPrimary}"/>
                            </Grid>
                    </StackPanel>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Command="{Binding SaveCommand}" HorizontalAlignment="Stretch" Height="50" Content="Установить" Margin="5" Style="{StaticResource ButtonSuccess}"/>
                        <Button Grid.Column="1" Command="{Binding ResetCommand}" HorizontalAlignment="Stretch" Height="50" Content="Использовать по умолчанию" Margin="5" Style="{StaticResource ButtonDanger}"/>
                    </Grid>
                </componentsViews:Container>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
