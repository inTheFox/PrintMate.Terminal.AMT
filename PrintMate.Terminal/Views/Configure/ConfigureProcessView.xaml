<UserControl x:Class="PrintMate.Terminal.Views.Configure.ConfigureProcessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrintMate.Terminal.ViewModels.Configure"
             mc:Ignorable="d"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:regions="http://prismlibrary.com/"
             xmlns:region="clr-namespace:PrintMate.Terminal.Region"
             d:DesignHeight="768" d:DesignWidth="724">

    <UserControl.Resources>
        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetName="MainContainer"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="HeaderSection"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="-30" To="0" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MenuSection"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="40" To="0" Duration="0:0:0.7">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Modern Card Style -->
        <Style x:Key="ProcessCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0f0f0f" Offset="0"/>
                        <GradientStop Color="#080808" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1f1f1f" Offset="0"/>
                        <GradientStop Color="#101010" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Icon Container Style -->
        <Style x:Key="IconContainerStyle" TargetType="Border">
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="CornerRadius" Value="7"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1a1a1a" Offset="0"/>
                        <GradientStop Color="#0d0d0d" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Selected Icon Container Style -->
        <Style x:Key="SelectedIconContainerStyle" TargetType="Border">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1a0d00" Offset="0"/>
                        <GradientStop Color="#0d0600" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Text Gradient -->
        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#ff6f00" Offset="0"/>
            <GradientStop Color="#ff9933" Offset="1"/>
        </LinearGradientBrush>

        <!-- Header Gradient -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#ffffff" Offset="0"/>
            <GradientStop Color="#e0e0e0" Offset="0.5"/>
            <GradientStop Color="#ffffff" Offset="1"/>
        </LinearGradientBrush>

        <!-- Subtitle Color -->
        <SolidColorBrush x:Key="SubtitleBrush" Color="#606060"/>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <!-- Main Container -->
    <Border x:Name="MainContainer" Opacity="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#030303" Offset="0"/>
                <GradientStop Color="#000000" Offset="0.5"/>
                <GradientStop Color="#020202" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackPanel x:Name="HeaderSection" Grid.Row="0" Margin="0 8 0 0" HorizontalAlignment="Center">
                <StackPanel.RenderTransform>
                    <TranslateTransform/>
                </StackPanel.RenderTransform>

                <!-- Main Title with Gradient -->
                <TextBlock HorizontalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="18"
                           Foreground="{StaticResource HeaderGradient}">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#ffffff"/>
                    </TextBlock.Effect>
                    Процесс
                </TextBlock>

                <!-- Subtitle with Icon -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 3 0 0">
                    <!-- Decorative Line Left -->
                    <Border Width="18" Height="1" CornerRadius="1" Margin="0 0 6 0" VerticalAlignment="Center">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#00ff6f00" Offset="0"/>
                                <GradientStop Color="#ff6f00" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <TextBlock Text="управление процессами"
                               FontSize="8"
                               FontWeight="Medium"
                               Foreground="{StaticResource SubtitleBrush}"/>

                    <!-- Decorative Line Right -->
                    <Border Width="18" Height="1" CornerRadius="1" Margin="6 0 0 0" VerticalAlignment="Center">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#ff6f00" Offset="0"/>
                                <GradientStop Color="#00ff6f00" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Menu Section -->
            <Border x:Name="MenuSection" Grid.Row="1" Margin="3 6 3 3">
                <Border.RenderTransform>
                    <TranslateTransform/>
                </Border.RenderTransform>

                <ListBox x:Name="mainViewGrid"
                         ItemsSource="{Binding Items}"
                         SelectedItem="{Binding SelectedItem}"
                         BorderThickness="0"
                         Background="Transparent"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Center"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled">

                    <!-- ListBoxItem Style -->
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="itemBorder"
                                                Margin="2"
                                                MinWidth="115"
                                                Padding="6"
                                                Style="{StaticResource ProcessCardStyle}">

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Icon Container with Glow Effect -->
                                                <Border x:Name="IconBorder"
                                                        Grid.Column="0"
                                                        Style="{StaticResource IconContainerStyle}">
                                                    <Grid>
                                                        <!-- Glow Background -->
                                                        <Border x:Name="IconGlow"
                                                                CornerRadius="10"
                                                                Opacity="0">
                                                            <Border.Background>
                                                                <RadialGradientBrush>
                                                                    <GradientStop Color="#40ff6f00" Offset="0"/>
                                                                    <GradientStop Color="#00ff6f00" Offset="1"/>
                                                                </RadialGradientBrush>
                                                            </Border.Background>
                                                        </Border>
                                                        <Image Source="{Binding Image}"
                                                               Width="14" Height="14"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                                    </Grid>
                                                </Border>

                                                <!-- Text Content -->
                                                <StackPanel Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            Margin="5 0 0 0">
                                                    <TextBlock x:Name="ActionName"
                                                               Text="{Binding Name}"
                                                               FontWeight="Bold"
                                                               FontSize="10"
                                                               Foreground="#e8e8e8"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock x:Name="ActionSubtitle"
                                                               Text="настройка"
                                                               FontSize="8"
                                                               Foreground="#505050"
                                                               Margin="0 1 0 0"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>

                                                <!-- Arrow Indicator -->
                                                <Border x:Name="ArrowContainer"
                                                        Grid.Column="2"
                                                        Width="16" Height="16"
                                                        CornerRadius="4"
                                                        VerticalAlignment="Center"
                                                        Background="#10ffffff">
                                                    <TextBlock x:Name="ArrowIcon"
                                                               Text="›"
                                                               FontSize="12"
                                                               FontWeight="Light"
                                                               Foreground="#404040"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Margin="0 -1 0 0"/>
                                                </Border>
                                            </Grid>

                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                                    <i:InvokeCommandAction
                                                        Command="{Binding DataContext.SelectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <!-- Hover State -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="itemBorder" Property="BorderBrush">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#30ff6f00" Offset="0"/>
                                                            <GradientStop Color="#20ff6f00" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="ArrowIcon" Property="Foreground" Value="#ff6f00"/>
                                                <Setter TargetName="ArrowContainer" Property="Background" Value="#15ff6f00"/>
                                            </Trigger>

                                            <!-- Selected State -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="itemBorder" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#ff6f00" Offset="0"/>
                                                            <GradientStop Color="#e65c00" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="itemBorder" Property="BorderBrush">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#ff9933" Offset="0"/>
                                                            <GradientStop Color="#ff6f00" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="IconBorder" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#cc5500" Offset="0"/>
                                                            <GradientStop Color="#993d00" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="IconGlow" Property="Opacity" Value="1"/>
                                                <Setter TargetName="ActionName" Property="Foreground" Value="#ffffff"/>
                                                <Setter TargetName="ActionSubtitle" Property="Foreground" Value="#ffffffaa"/>
                                                <Setter TargetName="ArrowIcon" Property="Foreground" Value="#ffffff"/>
                                                <Setter TargetName="ArrowContainer" Property="Background" Value="#30ffffff"/>
                                                <Setter TargetName="itemBorder" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="40"
                                                                          ShadowDepth="0"
                                                                          Opacity="0.5"
                                                                          Color="#ff6f00"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.Template>
                        <ControlTemplate TargetType="ListBox">
                            <ItemsPresenter />
                        </ControlTemplate>
                    </ListBox.Template>
                </ListBox>
            </Border>

            <!-- Content Region with Separator -->
            <Grid Grid.Row="2">
                <!-- Top Separator Line -->
                <Border Height="1" VerticalAlignment="Top" Margin="40 0 40 0" Panel.ZIndex="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#00ffffff" Offset="0"/>
                            <GradientStop Color="#15ffffff" Offset="0.3"/>
                            <GradientStop Color="#15ffffff" Offset="0.7"/>
                            <GradientStop Color="#00ffffff" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <!-- Content Region -->
                <region:AnimatedContentControl Margin="0 10 0 0"
                                               regions:RegionManager.RegionName="ConfigureProcessRegion"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
