<UserControl x:Class="PrintMate.Terminal.Views.Pages.ConfigureTemplateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.Pages"
             xmlns:regions="http://prismlibrary.com/"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:region="clr-namespace:PrintMate.Terminal.Region"
             d:DesignHeight="550" d:DesignWidth="524">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Content Area -->
        <region:AnimatedContentControl Grid.Column="0"
                                        regions:RegionManager.RegionName="ConfigureTemplateRegion" />

        <!-- Fixed Sidebar Menu -->
        <Border Grid.Column="1"
                Width="90"
                CornerRadius="8"
                Padding="5"
                Margin="3"
                Background="#0c0c0c"
                BorderBrush="#242424"
                BorderThickness="1"
                VerticalAlignment="Stretch">
                        <ListBox Grid.Column="1" x:Name="mainViewGrid" ItemsSource="{Binding Items}"
 Margin="0"
 SelectedItem="{Binding SelectedItem}"
 BorderThickness="0"
 Background="Transparent"
 VerticalAlignment="Top"
 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
 ScrollViewer.VerticalScrollBarVisibility="Disabled">

                            <!-- Стиль контейнера элемента (ListBoxItem) -->
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="itemBorder"
                        Margin="2"
                        Padding="8"
                        BorderThickness="2"
                        BorderBrush="#313131"
                        CornerRadius="6"
                        Background="#191919"
                        Cursor="Hand">
                                                    <StackPanel>
                                                        <Grid Width="26" Height="26">
                                                            <!-- Белая иконка (обычное состояние) -->
                                                            <Image x:Name="iconWhite" Source="{Binding Image}" Width="26" Height="26" Visibility="Visible"/>
                                                            <!-- Чёрная иконка (выделенное состояние) -->
                                                            <Rectangle x:Name="iconBlack" Width="26" Height="26" Fill="Black" Visibility="Collapsed">
                                                                <Rectangle.OpacityMask>
                                                                    <ImageBrush ImageSource="{Binding Image}"/>
                                                                </Rectangle.OpacityMask>
                                                            </Rectangle>
                                                        </Grid>
                                                        <TextBlock x:Name="itemText" Margin="0 5 0 0" FontWeight="Regular" FontSize="8" Foreground="White" HorizontalAlignment="Center" Text="{Binding Name}" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="70"/>
                                                    </StackPanel>


                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                                            <i:InvokeCommandAction
                                Command="{Binding DataContext.SelectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}" />
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="itemBorder" Property="Background" Value="#ff6f00"/>
                                                        <Setter TargetName="itemBorder" Property="BorderBrush" Value="Transparent"/>
                                                        <Setter TargetName="itemBorder" Property="BorderThickness" Value="2"/>
                                                        <!-- Переключаем на чёрную иконку -->
                                                        <Setter TargetName="iconWhite" Property="Visibility" Value="Collapsed"/>
                                                        <Setter TargetName="iconBlack" Property="Visibility" Value="Visible"/>
                                                        <!-- Чёрный цвет текста -->
                                                        <Setter TargetName="itemText" Property="Foreground" Value="Black"/>
                                                        <!-- Свечение -->
                                                        <Setter TargetName="itemBorder" Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5" Color="#ff6f00"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="itemBorder" Property="BorderBrush" Value="#ff6f00"/>
                                                        <Setter TargetName="itemBorder" Property="Opacity" Value="0.9"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>


                            <!-- Отключаем выделение по умолчанию (чтобы не было синего фона) -->
                            <ListBox.Template>
                                <ControlTemplate TargetType="ListBox">
                                    <ItemsPresenter />
                                </ControlTemplate>
                            </ListBox.Template>

                        </ListBox>
        </Border>
    </Grid>
</UserControl>
