<UserControl x:Class="PrintMate.Terminal.Views.Configure.ConfigureProcessViews.ConfigureProcessSystemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.Configure.ConfigureProcessViews"
             xmlns:controls="clr-namespace:PrintMate.Terminal.Views.ComponentsViews"
             xmlns:opc2Lib="clr-namespace:Opc2Lib;assembly=Opc2Lib"
             mc:Ignorable="d" 
             Background="Black"
             d:DesignHeight="789" d:DesignWidth="1392">
    <Grid>
        <ScrollViewer  x:Name="SmoothScrollViewer"
                      VerticalScrollBarVisibility="Hidden"
                      CanContentScroll="False" ManipulationBoundaryFeedback="ScrollViewer_ManipulationBoundaryFeedback">
            <StackPanel>
                <controls:Container Margin="5 10 10 0" Title="Сигналы" x:Name="Signals" Opacity="0">
                <UniformGrid Columns="3">
                    <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_PChamber_ChamberDoorLS}" Margin="1"/>
                    <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_PChamber_ExhaustValve}" Margin="1"/>
                    <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_PChamber_ExhaustValveRegulated}" Margin="1"/>

                    <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_PChamber_GloveBoxLS}" Margin="1"/>
                    <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_Axes_RecoaterLeftLS}" Margin="1"/>
                    <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_Axes_RecoaterRightLS}" Margin="1"/>

                    <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_Axes_PlatformTopLS}" Margin="1"/>
                    <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_Axes_PlatformBottomLS}" Margin="1"/>
                    <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.Trig_Axes_RecoaterRef}" Margin="1"/>

                    <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.Trig_AllSystemReady}" Margin="1"/>
                    <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.Trig_RKF}" Margin="1"/>
                </UniformGrid>
            </controls:Container>


                <controls:Container Margin="5 10 10 0" Title="Управление" x:Name="Manage" Opacity="0">
                <UniformGrid Columns="2">
                    <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_Axes_PlatformRef}" Margin="1"/>
                    <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_PChamber_LightPB}" Margin="1"/>
                    <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_PChamber_PlatformHeater}" Margin="1"/>
                </UniformGrid>
            </controls:Container>

                <controls:Container Margin="5 10 10 0" Title="Сенсоры" x:Name="Sensors" Opacity="0">
                <UniformGrid Columns="2">
                    <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_PChamber_Pressure}" Margin="1"/>
                    <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_PChamber_Oxygen}" Margin="1"/>
                    <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_PChamber_Temperature}" Margin="1"/>

                    <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_PChamber_HeaterTemperature1}" Margin="1"/>
                    <controls:PLCDecimalView ReadOnly="False" CommandInfo="{x:Static opc2Lib:OpcCommands.AM_PChamber_HeaterTemperature2}" Margin="1"/>
                    <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_PChamber_InertInletPressure}" Margin="1"/>
                </UniformGrid>
            </controls:Container>
                <controls:Container Margin="5 10 10 0" Title="Установки" x:Name="Setups" Opacity="0">
                <UniformGrid Columns="2">
                    <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.Set_Axes_PlatformSpeed}" Margin="1"/>
                    <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.Set_PChamber_PlatformHeatingTemperature}" Margin="1"/>
                </UniformGrid>
            </controls:Container>
        </StackPanel>
            </ScrollViewer>
    </Grid>
</UserControl>
