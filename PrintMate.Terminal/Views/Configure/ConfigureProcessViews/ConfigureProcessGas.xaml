<UserControl x:Class="PrintMate.Terminal.Views.Configure.ConfigureProcessViews.ConfigureProcessGas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.Configure.ConfigureProcessViews"
             xmlns:controls="clr-namespace:PrintMate.Terminal.Views.ComponentsViews"
             xmlns:opc2Lib="clr-namespace:Opc2Lib;assembly=Opc2Lib"
             mc:Ignorable="d" 
             Background="Black">



        <ScrollViewer PanningMode="Both"
                      PanningRatio="1.0"
                      CanContentScroll="False" ManipulationBoundaryFeedback="ScrollViewer_ManipulationBoundaryFeedback" VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <controls:Container Margin="3 5 5 0" Title="Сигналы">
                    <UniformGrid Columns="2">
                        
                            <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_PChamber_ExhaustValve}" Margin="1"/>
                            <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_PChamber_ExhaustValveRegulated}" Margin="1"/>
                            <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_GasFilter_VFromCameraOpenedLS}" Margin="1"/>
                            <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_GasFilter_VFromCameraClosedLS}" Margin="1"/>
                            <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_GasFilter_Module_ChillerOK}" Margin="1"/>
                            <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_GasFilter_Module_LidClosedLS}" Margin="1"/>
                            <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_GasFilter_Module_DumpBucketPresentLS}" Margin="1"/>
                            <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_GasFilter_Module_DumpBucketLidClosedLS}" Margin="1"/>
                            <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_GasFilter_AirInputPressure}" Margin="1"/>
                            <controls:PLCLogicIndicator CommandInfo="{x:Static opc2Lib:OpcCommands.DM_GasFilter_FilterPresentLS}" Margin="1"/>
                        
                    </UniformGrid>
                </controls:Container>
                <controls:Container Margin="3 5 5 0" Title="Управление">
                    <UniformGrid Columns="2">
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_PChamber_VExhaustCamera}" Margin="1"/>
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_PChamber_VExhaustCameraRegulated}" Margin="1"/>
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_GasFilter_VGasToCamera}" Margin="1"/>
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_GasFilter_VGasFromCamera}" Margin="1"/>
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_GasFilter_Blower}" Margin="1"/>
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_GasFilter_Inert}" Margin="1"/>
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_GasFilter_Module_VSupplyDischargeTank}" Margin="1"/>
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_GasFilter_Module_VExhaust}" Margin="1"/>
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_GasFilter_Module_VDischargeFilter1}" Margin="1"/>
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_GasFilter_Module_VDischargeFilter2}" Margin="1"/>
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_GasFilter_Module_VDischargeFilter3}" Margin="1"/>
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_GasFilter_Module_VDischargeFilter4}" Margin="1"/>
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_GasSystem}" Margin="1"/>
                </UniformGrid>
                </controls:Container>
                <controls:Container Margin="3 5 5 0" Title="Сброс">
                    <UniformGrid Columns="1">
                        <controls:PLCBoolSwitch CommandInfo="{x:Static opc2Lib:OpcCommands.Com_GasFilter_ResetInertCons}" Margin="1"/>
                    </UniformGrid>
                </controls:Container>
                <controls:Container Margin="3 5 5 0" Title="Сенсоры">
                    <UniformGrid Columns="2">
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_FilterOxygen}" Margin="1"/>
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_PressureFilter}" Margin="1"/>
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_GasFlow}" Margin="1"/>
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_InertInletPressure}" Margin="1"/>
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_InertConsumption}" Margin="1"/>
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_InertCurrentConsumption}" Margin="1"/>
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_BlowerTemperature}" Margin="1"/>
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_VenturiTemperature}" Margin="1"/>
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_Module_DischargeTankPressure}" Margin="1"/>
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_Module_Pressure}" Margin="1"/>
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_Module_RH}" Margin="1"/>
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_Module_Temperature}" Margin="1"/>
                        <controls:PLCDecimalView CommandInfo="{x:Static opc2Lib:OpcCommands.AM_GasFilter_Module_Oxygen}" Margin="1"/>
                    </UniformGrid>
                </controls:Container>
            </StackPanel>
        </ScrollViewer>

</UserControl>
