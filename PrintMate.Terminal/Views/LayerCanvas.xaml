<UserControl x:Class="PrintMate.Terminal.Views.LayerCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="#0f0f0f"
             ClipToBounds="True">
    <Grid>
        <!-- Viewport Canvas - растягивается на весь доступный размер -->
        <Canvas x:Name="ViewportCanvas"
                Background="#0f0f0f"
                ClipToBounds="True"
                IsManipulationEnabled="True"
                MouseWheel="Canvas_MouseWheel"
                MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                MouseMove="Canvas_MouseMove"
                ManipulationStarting="Canvas_ManipulationStarting"
                ManipulationDelta="Canvas_ManipulationDelta"
                ManipulationCompleted="Canvas_ManipulationCompleted"
                SizeChanged="ViewportCanvas_SizeChanged">

            <!-- Main Canvas - масштабируемый и перемещаемый -->
            <Canvas x:Name="MainCanvas"
                    Background="#0f0f0f">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                        <TranslateTransform x:Name="TranslateTransform" X="0" Y="0"/>
                    </TransformGroup>
                </Canvas.RenderTransform>
            </Canvas>

            <!-- Overlay Canvas для названия детали -->
            <Canvas x:Name="OverlayCanvas"
                    Background="Transparent"
                    IsHitTestVisible="False">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="{Binding ScaleX, ElementName=ScaleTransform}"
                                      ScaleY="{Binding ScaleY, ElementName=ScaleTransform}"/>
                        <TranslateTransform X="{Binding X, ElementName=TranslateTransform}"
                                          Y="{Binding Y, ElementName=TranslateTransform}"/>
                    </TransformGroup>
                </Canvas.RenderTransform>

                <!-- TextBlock для отображения названия детали -->
                <Border x:Name="PartNameBorder"
                        Visibility="Collapsed"
                        Background="#CC000000"
                        CornerRadius="4"
                        Padding="8,4">
                    <TextBlock x:Name="PartNameText"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"/>
                </Border>
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>
