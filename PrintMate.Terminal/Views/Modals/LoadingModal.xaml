<UserControl x:Class="PrintMate.Terminal.Views.Modals.LoadingModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="1024"
             Height="768">

    <Border Background="#1a1a1a"
            Width="500"
            Height="250"
            CornerRadius="10"
            BorderBrush="#333333"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                            BlurRadius="30"
                            ShadowDepth="0"
                            Opacity="0.8"/>
        </Border.Effect>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0"
                      Text="Загрузка проекта"
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,30"/>

            <!-- Анимированный круг загрузки -->
            <Grid Grid.Row="1"
                  VerticalAlignment="Center">
                <Viewbox Width="80" Height="80">
                    <Canvas Width="100" Height="100">
                        <!-- Круг загрузки -->
                        <Ellipse Width="100"
                                Height="100"
                                Stroke="#2196F3"
                                StrokeThickness="8"
                                StrokeDashArray="200 200"
                                StrokeDashOffset="0">
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotation" CenterX="50" CenterY="50"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0"
                                                           To="360"
                                                           Duration="0:0:1.5"
                                                           RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </Canvas>
                </Viewbox>
            </Grid>

            <!-- Прогресс-бар и статус -->
            <StackPanel Grid.Row="2"
                       VerticalAlignment="Bottom">
                <!-- ProgressBar -->
                <ProgressBar Height="8"
                            Margin="0,0,0,15"
                            Visibility="{Binding ProgressBarVisibility}"
                            Value="{Binding Progress}"
                            Maximum="100"
                            IsIndeterminate="{Binding IsIndeterminate}"
                            Foreground="#2196F3"
                            Background="#404040"
                            BorderThickness="0"/>

                <!-- Сообщение о статусе -->
                <TextBlock Text="{Binding StatusMessage}"
                          FontSize="16"
                          Foreground="#CCCCCC"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          TextAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
