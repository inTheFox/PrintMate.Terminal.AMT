<UserControl x:Class="PrintMate.Terminal.Views.Modals.Project3DPreviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:PrintMate.Terminal.Controls"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             Width="1600" Height="1000"
             Background="Transparent">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Slider Style -->
        <Style x:Key="LayerSliderStyle" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Track -->
                            <Border Grid.Row="1" Height="8" CornerRadius="4" Margin="10,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#252525" Offset="0"/>
                                        <GradientStop Color="#353535" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <Track Grid.Row="1" x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Grid>
                                                    <!-- Glow -->
                                                    <Ellipse Width="28" Height="28" Opacity="0.3">
                                                        <Ellipse.Fill>
                                                            <RadialGradientBrush>
                                                                <GradientStop Color="#FF6F00" Offset="0"/>
                                                                <GradientStop Color="Transparent" Offset="1"/>
                                                            </RadialGradientBrush>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <!-- Thumb -->
                                                    <Ellipse Width="20" Height="20" Cursor="Hand">
                                                        <Ellipse.Fill>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                <GradientStop Color="#FF8C00" Offset="0"/>
                                                                <GradientStop Color="#CC7000" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Ellipse.Fill>
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect Color="#FF6F00" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="12" BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#2a2a2a" Offset="0"/>
                                    <GradientStop Color="#1a1a1a" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#404040" Offset="0"/>
                                    <GradientStop Color="#202020" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#3a3a3a" Offset="0"/>
                                            <GradientStop Color="#2a2a2a" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#FF6F00"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#1a1a1a" Offset="0"/>
                                            <GradientStop Color="#0a0a0a" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Background="Transparent">
                            <TextBlock Text="X" FontSize="18" FontWeight="Bold"
                                       Foreground="#808080"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#40FF0000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="MainBorder"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                     From="0.9" To="1" Duration="0:0:0.25">
                        <DoubleAnimation.EasingFunction>
                            <BackEase EasingMode="EaseOut" Amplitude="0.15"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="MainBorder"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                     From="0.9" To="1" Duration="0:0:0.25">
                        <DoubleAnimation.EasingFunction>
                            <BackEase EasingMode="EaseOut" Amplitude="0.15"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="MainBorder"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

    <!-- Main Container -->
    <Border x:Name="MainBorder" CornerRadius="20" RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1a1a1a" Offset="0"/>
                <GradientStop Color="#0f0f0f" Offset="0.5"/>
                <GradientStop Color="#0a0a0a" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="60" ShadowDepth="0" Opacity="0.9"/>
        </Border.Effect>

        <Border CornerRadius="20" BorderThickness="1">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#4a3520" Offset="0"/>
                    <GradientStop Color="#252525" Offset="0.5"/>
                    <GradientStop Color="#3a2a1a" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" CornerRadius="20,20,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#1f1a15" Offset="0"/>
                            <GradientStop Color="#151210" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <!-- Orange accent line -->
                        <Border VerticalAlignment="Top" Height="4" CornerRadius="20,20,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#994700" Offset="0"/>
                                    <GradientStop Color="#FF8C00" Offset="0.3"/>
                                    <GradientStop Color="#FFa500" Offset="0.5"/>
                                    <GradientStop Color="#FF8C00" Offset="0.7"/>
                                    <GradientStop Color="#994700" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <Grid Margin="25,20,25,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <!-- Icon -->
                                <Border Width="44" Height="44" CornerRadius="10" Margin="0,0,15,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF8C00" Offset="0"/>
                                            <GradientStop Color="#CC7000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="3D" FontSize="16" FontWeight="Bold"
                                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="3D Просмотр проекта" FontSize="20" FontWeight="SemiBold" Foreground="#f0f0f0"/>
                                    <TextBlock Text="{Binding ProjectName}" FontSize="13" Foreground="#808080" Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Close Button -->
                            <Button Grid.Column="1" Style="{StaticResource CloseButton}" Command="{Binding CloseCommand}"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Divider -->
                <Rectangle Grid.Row="0" VerticalAlignment="Bottom" Height="1">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#1a1a1a" Offset="0"/>
                            <GradientStop Color="#4a3520" Offset="0.5"/>
                            <GradientStop Color="#1a1a1a" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <!-- 3D Viewport -->
                <Grid Grid.Row="1" Margin="15">
                    <Border CornerRadius="16" ClipToBounds="True">
                        <Border.Background>
                            <SolidColorBrush Color="#0a0a0a"/>
                        </Border.Background>
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#3a3530" Offset="0"/>
                                <GradientStop Color="#202020" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.BorderThickness>1</Border.BorderThickness>

                        <!-- DX11 Viewport -->
                        <controls:DX11ViewportControl x:Name="Viewport"
                                                      ShowInfo="False"
                                                      Background="Black"/>
                    </Border>

                    <!-- Loading Overlay -->
                    <Border CornerRadius="16"
                            Background="#DD0a0a0a"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Loading Spinner -->
                            <Viewbox Width="70" Height="70" Margin="0,0,0,20">
                                <Canvas Width="100" Height="100">
                                    <Ellipse Width="100" Height="100"
                                             Stroke="#FF8C00"
                                             StrokeThickness="6"
                                             StrokeDashArray="200 200">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform x:Name="LoadingSpinner" CenterX="50" CenterY="50"/>
                                        </Ellipse.RenderTransform>
                                        <Ellipse.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetName="LoadingSpinner"
                                                                         Storyboard.TargetProperty="Angle"
                                                                         From="0" To="360"
                                                                         Duration="0:0:1.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Ellipse.Triggers>
                                    </Ellipse>
                                </Canvas>
                            </Viewbox>

                            <TextBlock Text="{Binding LoadingMessage}"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="#f0f0f0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Info Panel (top-left) -->
                    <Border CornerRadius="10" Padding="15,10" Margin="20"
                            HorizontalAlignment="Left" VerticalAlignment="Top"
                            Background="#CC1a1a1a">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Слоев: " FontSize="13" Foreground="#808080"/>
                                <TextBlock Text="{Binding TotalLayers}" FontSize="13" FontWeight="SemiBold" Foreground="#FF8C00"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                <TextBlock Text="Высота: " FontSize="13" Foreground="#808080"/>
                                <TextBlock Text="{Binding ProjectHeight, StringFormat={}{0:F2} мм}" FontSize="13" FontWeight="SemiBold" Foreground="#f0f0f0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Camera Controls (top-right) -->
                    <StackPanel Orientation="Horizontal" Margin="20"
                                HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Button Style="{StaticResource ControlButton}" Command="{Binding ResetCameraCommand}" ToolTip="Сбросить камеру" Margin="0,0,8,0">
                            <TextBlock Text="R" FontSize="16" FontWeight="Bold" Foreground="#c0c0c0"/>
                        </Button>
                        <Button Style="{StaticResource ControlButton}" Command="{Binding TopViewCommand}" ToolTip="Вид сверху">
                            <TextBlock Text="T" FontSize="16" FontWeight="Bold" Foreground="#c0c0c0"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Layer Control Panel -->
                <Border Grid.Row="2" CornerRadius="0,0,20,20" Padding="25,20">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#151210" Offset="0"/>
                            <GradientStop Color="#0c0a08" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Previous Layer Button -->
                        <Button Grid.Column="0" Style="{StaticResource ControlButton}"
                                Command="{Binding PreviousLayerCommand}"
                                ToolTip="Предыдущий слой" Margin="0,0,20,0">
                            <TextBlock Text="&#x25C4;" FontSize="18" Foreground="#c0c0c0"/>
                        </Button>

                        <!-- Slider and Info -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Current Layer Info -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                                <TextBlock Text="Слой " FontSize="16" Foreground="#808080" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CurrentLayerIndex}" FontSize="22" FontWeight="Bold" Foreground="#FF8C00" VerticalAlignment="Center"/>
                                <TextBlock Text=" / " FontSize="16" Foreground="#505050" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalLayers}" FontSize="18" FontWeight="SemiBold" Foreground="#c0c0c0" VerticalAlignment="Center"/>

                                <Rectangle Width="1" Height="20" Fill="#303030" Margin="20,0"/>

                                <TextBlock Text="Z: " FontSize="14" Foreground="#606060" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CurrentLayerZ, StringFormat={}{0:F3} мм}"
                                           FontSize="14" FontWeight="SemiBold" Foreground="#a0a0a0" VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Layer Slider -->
                            <Slider Grid.Row="1"
                                    Style="{StaticResource LayerSliderStyle}"
                                    Value="{Binding CurrentLayerIndex, Mode=TwoWay}"
                                    Minimum="1"
                                    Maximum="{Binding TotalLayers}"
                                    IsSnapToTickEnabled="True"
                                    TickFrequency="1"/>
                        </Grid>

                        <!-- Next Layer Button -->
                        <Button Grid.Column="2" Style="{StaticResource ControlButton}"
                                Command="{Binding NextLayerCommand}"
                                ToolTip="Следующий слой" Margin="20,0,0,0">
                            <TextBlock Text="&#x25BA;" FontSize="18" Foreground="#c0c0c0"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
</UserControl>
