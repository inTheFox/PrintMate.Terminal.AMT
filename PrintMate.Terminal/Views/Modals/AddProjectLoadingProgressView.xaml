<UserControl x:Class="PrintMate.Terminal.Views.Modals.AddProjectLoadingProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.Modals"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">
    <Grid Width="900" Height="800">
        <Border Background="#121212">
            <StackPanel VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 0">
                    <Canvas Width="600" Height="600" ClipToBounds="False">
                        <!-- Волны (от центра наружу) -->
                        <Ellipse Width="360" Height="360" Canvas.Left="120" Canvas.Top="120"
                                 Stroke="#1A343434" StrokeThickness="2" Fill="Transparent">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="Wave1Scale" ScaleX="1" ScaleY="1" CenterX="180" CenterY="180"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(ScaleTransform.ScaleX)"
                                                           From="1" To="1.6" Duration="0:0:3" BeginTime="0:0:0"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(ScaleTransform.ScaleY)"
                                                           From="1" To="1.6" Duration="0:0:3" BeginTime="0:0:0"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                           From="1" To="0" Duration="0:0:3" BeginTime="0:0:0"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <Ellipse Width="360" Height="360" Canvas.Left="120" Canvas.Top="120"
                                 Stroke="#1A343434" StrokeThickness="2" Fill="Transparent">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="Wave2Scale" ScaleX="1" ScaleY="1" CenterX="180" CenterY="180"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(ScaleTransform.ScaleX)"
                                                           From="1" To="1.6" Duration="0:0:3" BeginTime="0:0:1"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(ScaleTransform.ScaleY)"
                                                           From="1" To="1.6" Duration="0:0:3" BeginTime="0:0:1"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                           From="1" To="0" Duration="0:0:3" BeginTime="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <Ellipse Width="360" Height="360" Canvas.Left="120" Canvas.Top="120"
                                 Stroke="#1A343434" StrokeThickness="2" Fill="Transparent">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="Wave3Scale" ScaleX="1" ScaleY="1" CenterX="180" CenterY="180"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(ScaleTransform.ScaleX)"
                                                           From="1" To="1.6" Duration="0:0:3" BeginTime="0:0:2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(ScaleTransform.ScaleY)"
                                                           From="1" To="1.6" Duration="0:0:3" BeginTime="0:0:2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                           From="1" To="0" Duration="0:0:3" BeginTime="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <!-- Progress bars -->
                        <hc:CircleProgressBar Canvas.Top="135" Canvas.Left="135"  Width="330" Height="330" IsIndeterminate="True" Foreground="#ff6f00"/>
                        <hc:CircleProgressBar BorderBrush="Transparent" Background="Transparent"  IsIndeterminate="True" Canvas.Top="120" Canvas.Left="120"  Width="360" Height="360" Foreground="#343434"/>

                        <!-- Центральное изображение -->
                        <Border Canvas.Left="155" Canvas.Top="155" Padding="45" Background="White" CornerRadius="150">
                            <Image Width="200" gif:ImageBehavior.AnimatedSource="pack://application:,,,/images/parse.gif"
                                   gif:ImageBehavior.RepeatBehavior="Forever" />
                        </Border>
                    </Canvas>
                </StackPanel>
                <StackPanel>
                    <TextBlock Margin="0 -80 0 0" Foreground="White" HorizontalAlignment="Center" FontWeight="Bold" FontSize="30" Text="Загружаем проект"/>
                    <TextBlock Margin="0 -30 0 0" Foreground="Gray" HorizontalAlignment="Center" FontWeight="Medium" FontSize="20" Text="{Binding Status}"/>
                    <!--<WrapPanel HorizontalAlignment="Center" Margin="0 200 0 0">
                        <Button Height="50" Width="200" Content="Продолжить в фоне" Margin="5" Style="{StaticResource ButtonInfo}"/>
                        <Button Height="50" Width="200" Content="Прервать" Margin="5" Style="{StaticResource ButtonDanger}"/>
                    </WrapPanel>-->
                </StackPanel>
            </StackPanel>

        </Border>
    </Grid>
</UserControl>
