<UserControl x:Class="PrintMate.Terminal.Views.Modals.EditRoleViewModelForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.Modals"
             xmlns:componentsViews="clr-namespace:PrintMate.Terminal.Views.ComponentsViews"
             xmlns:converters="clr-namespace:PrintMate.Terminal.Converters"
             mc:Ignorable="d"
             Width="1920" Height="1080"
             d:DesignHeight="1080" d:DesignWidth="1920">

    <UserControl.Resources>
        <!-- Конвертеры для видимости -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:AnyCheckedConverter x:Key="AnyCheckedConverter"/>
        <converters:AnyCheckedToVisibilityConverter x:Key="AnyCheckedToVisibilityConverter"/>

        <!-- Стиль для кастомного чекбокса -->
        <Style x:Key="PermissionCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Кастомная галочка -->
                            <Border Grid.Column="0"
                                    Width="20"
                                    Height="20"
                                    Background="#1a1a1a"
                                    BorderBrush="#555"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Margin="0,0,10,0">
                                <Path x:Name="checkMark"
                                      Data="M 0,5 L 5,10 L 12,0"
                                      Stroke="#ff4500"
                                      StrokeThickness="2"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Visibility="Collapsed"/>
                            </Border>

                            <!-- Текст -->
                            <TextBlock Grid.Column="1"
                                       Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkMark" Property="Stroke" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="#131313" CornerRadius="10" Padding="15">
            <componentsViews:Container Width="500"
                                      HorizontalAlignment="Center"
                                      Title="Редактирование роли">
                <Border Background="Transparent" Padding="1" Width="475">
                    <StackPanel>
                        <!-- Название роли -->
                        <TextBlock Text="Это обязательное поле"
                                  HorizontalAlignment="Center"
                                  Foreground="Red"
                                  Margin="0,0,0,5"
                                  Visibility="{Binding RoleName,
                                              Converter={StaticResource StringToVisibilityConverter},
                                              ConverterParameter=inverse}"/>

                        <componentsViews:EditboxKeyboard Margin="5"
                                                         Label="Название роли"
                                                         Value="{Binding RoleName, Mode=TwoWay}"/>

                        <!-- Отображаемое имя -->
                        <TextBlock Text="Это обязательное поле"
                                  HorizontalAlignment="Center"
                                  Foreground="Red"
                                  Margin="0,0,0,5"
                                  Visibility="{Binding RoleDisplayName,
                                              Converter={StaticResource StringToVisibilityConverter},
                                              ConverterParameter=inverse}"/>

                        <componentsViews:EditboxKeyboard Margin="5"
                                                         Label="Отображаемое имя"
                                                         Value="{Binding RoleDisplayName, Mode=TwoWay}"/>

                        <!-- Права доступа -->
                        <StackPanel Margin="5,10,5,5">
                            <TextBlock Text="Права доступа:"
                                      Foreground="White"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,5"/>

                            <!-- Валидация выбора прав -->
                            <TextBlock Text="Выберите хотя бы одно право"
                                      HorizontalAlignment="Center"
                                      Foreground="#ff4500"
                                      FontSize="12"
                                      Margin="5,3,0,0">
                                <TextBlock.Visibility>
                                    <MultiBinding Converter="{StaticResource AnyCheckedToVisibilityConverter}">
                                        <Binding Path="AvailablePermissions"/>
                                        <Binding Path="AvailablePermissions" Converter="{StaticResource AnyCheckedConverter}"/>
                                    </MultiBinding>
                                </TextBlock.Visibility>
                            </TextBlock>

                            <!-- Список чекбоксов с правами -->
                            <Border BorderBrush="#555"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="10"
                                    Background="#1a1a1a"
                                    MaxHeight="150"
                                    Margin="0,5,0,10">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding AvailablePermissions}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding DisplayName}"
                                                         IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                         Style="{StaticResource PermissionCheckBoxStyle}"
                                                         Margin="0,2"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>

                            <!-- Информация о выбранных правах -->
                            <TextBlock Text="{Binding SelectedPermissionsText}"
                                      Foreground="#888"
                                      FontSize="12"
                                      Margin="0,5,0,0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Кнопки -->
                        <Button Margin="5"
                               HorizontalAlignment="Stretch"
                               Height="50"
                               Background="#ff4500"
                               Foreground="White"
                               BorderThickness="0"
                               Command="{Binding SaveCommand}"
                               Cursor="Hand">
                            <TextBlock Text="Сохранить"
                                      FontSize="14"
                                      FontWeight="SemiBold"/>
                        </Button>

                        <Button Margin="5"
                               HorizontalAlignment="Stretch"
                               Height="50"
                               Background="#555"
                               Foreground="White"
                               BorderThickness="0"
                               Command="{Binding CancelCommand}"
                               Cursor="Hand">
                            <TextBlock Text="Отмена"
                                      FontSize="14"/>
                        </Button>
                    </StackPanel>
                </Border>
            </componentsViews:Container>
        </Border>
    </Grid>
</UserControl>
