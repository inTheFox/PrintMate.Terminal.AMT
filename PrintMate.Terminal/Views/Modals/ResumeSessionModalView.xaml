<UserControl x:Class="PrintMate.Terminal.Views.Modals.ResumeSessionModalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.Modals"
             mc:Ignorable="d"
             Width="1920" Height="1080"
             d:DesignHeight="550" d:DesignWidth="700">

    <Border Background="#1a1a1a" HorizontalAlignment="Center" VerticalAlignment="Center"
            CornerRadius="10"
            BorderBrush="#333333"
            BorderThickness="1"
            Width="700"
            MinHeight="500">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                            BlurRadius="30"
                            ShadowDepth="0"
                            Opacity="0.8"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0"
                    Background="#252525"
                    CornerRadius="10,10,0,0"
                    Padding="30,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚠"
                              FontSize="28"
                              Foreground="#FF9800"
                              Margin="0,0,15,0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="Обнаружена прерванная печать"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Содержимое -->
            <StackPanel Grid.Row="1" Margin="30,30,30,30">
                <TextBlock Text="Найдена незавершённая печать проекта:"
                          FontSize="16"
                          Foreground="#E0E0E0"
                          Margin="0,0,0,20"/>

                <!-- Информация о проекте -->
                <Border Background="#2a2a2a"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,25">
                    <StackPanel>
                        <!-- Название проекта -->
                        <TextBlock FontSize="20"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Text="{Binding Session.ProjectName}"
                                  Margin="0,0,0,15"/>

                        <!-- Прогресс -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="Прогресс:"
                                      FontSize="14"
                                      Foreground="#888888"
                                      Width="120"/>
                            <TextBlock Grid.Column="1"
                                      FontSize="14"
                                      Foreground="#4CAF50"
                                      FontWeight="SemiBold">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} / {1} слоёв ({2:F1}%)">
                                        <Binding Path="CompletedLayers"/>
                                        <Binding Path="Session.TotalLayers"/>
                                        <Binding Path="ProgressPercentage"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Grid>

                        <!-- Дата начала -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="Начало печати:"
                                      FontSize="14"
                                      Foreground="#888888"
                                      Width="120"/>
                            <TextBlock Grid.Column="1"
                                      Text="{Binding Session.StartedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm:ss}'}"
                                      FontSize="14"
                                      Foreground="#AAAAAA"/>
                        </Grid>

                        <!-- Оператор -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="Оператор:"
                                      FontSize="14"
                                      Foreground="#888888"
                                      Width="120"/>
                            <TextBlock Grid.Column="1"
                                      Text="{Binding Session.UserName}"
                                      FontSize="14"
                                      Foreground="#AAAAAA"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Вопрос -->
                <TextBlock Text="Выберите действие:"
                          FontSize="16"
                          Foreground="#E0E0E0"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>

                <!-- Кнопка Возобновить -->
                <Button Command="{Binding ResumeCommand}"
                        Height="70"
                        Margin="0,0,0,15"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#4CAF50"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="8"
                                               BorderThickness="0">
                                            <Grid Margin="20,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                          Text="▶"
                                                          FontSize="24"
                                                          FontWeight="Bold"
                                                          Foreground="White"
                                                          Margin="0,0,20,0"
                                                          VerticalAlignment="Center"/>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="Возобновить печать"
                                                              FontSize="18"
                                                              FontWeight="SemiBold"
                                                              Foreground="White"/>
                                                    <TextBlock Text="Продолжить с последнего завершённого слоя"
                                                              FontSize="12"
                                                              Foreground="#E0E0E0"
                                                              Opacity="0.8"
                                                              Margin="0,3,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45a049"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#3d8b40"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Кнопка Начать заново -->
                <Button Command="{Binding StartNewCommand}"
                        Height="70"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2196F3"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="8"
                                               BorderThickness="0">
                                            <Grid Margin="20,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                          Text="↻"
                                                          FontSize="28"
                                                          FontWeight="Bold"
                                                          Foreground="White"
                                                          Margin="0,0,20,0"
                                                          VerticalAlignment="Center"/>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="Начать печать заново"
                                                              FontSize="18"
                                                              FontWeight="SemiBold"
                                                              Foreground="White"/>
                                                    <TextBlock Text="Печать начнётся с первого слоя"
                                                              FontSize="12"
                                                              Foreground="#E0E0E0"
                                                              Opacity="0.8"
                                                              Margin="0,3,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#1565C0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Кнопка Отмена -->
            <Border Grid.Row="2"
                    Background="#252525"
                    CornerRadius="0,0,10,10"
                    Padding="30,20">
                <Button Content="Отмена"
                        Command="{Binding CancelCommand}"
                        Width="150"
                        Height="45"
                        HorizontalAlignment="Center"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#757575"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="5"
                                               BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#616161"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#424242"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>
    </Border>
</UserControl>
