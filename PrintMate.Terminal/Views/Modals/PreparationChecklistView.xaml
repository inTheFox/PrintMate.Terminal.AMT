<UserControl x:Class="PrintMate.Terminal.Views.Modals.PreparationChecklistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             Width="1920" Height="1080"
             d:DesignHeight="1080" d:DesignWidth="1920">

    <UserControl.Resources>
        <!-- Стиль для CheckBox -->
        <Style x:Key="ChecklistCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Кастомный чекбокс -->
                            <Border x:Name="CheckBoxBorder"
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Background="#2D2D30"
                                    BorderBrush="Gray"
                                    BorderThickness="2"
                                    CornerRadius="6"
                                    Margin="0,0,15,0">
                                <!-- Галочка -->
                                <Path x:Name="CheckMark"
                                      Data="M 2,8 L 8,14 L 18,2"
                                      Stroke="#fc7c0c"
                                      StrokeThickness="3"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      Visibility="Collapsed"
                                      Margin="4"/>
                            </Border>

                            <!-- Текст -->
                            <ContentPresenter Grid.Column="1"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            RecognizesAccessKey="True"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Когда отмечен -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#fc7c0c"/>
                            </Trigger>

                            <!-- При наведении -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#ff9d3c"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#3D3D40"/>
                            </Trigger>

                            <!-- При наведении на отмеченный -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#ff9d3c"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#ff9d3c"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#1E1E1E"
            BorderBrush="Transparent"
            BorderThickness="2"
            CornerRadius="10"
            Padding="0"
            Width="500"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Height="700">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0"
                    Background="#2D2D30"
                    CornerRadius="8,8,0,0"
                    Padding="20,15">
                <TextBlock Text="Подготовка к работе"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Список проверок -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="30,20">
                <StackPanel Margin="30">
                    <CheckBox Content="Задвижки фильтра открыты"
                              IsChecked="{Binding FilterValvesOpen, Mode=TwoWay}"
                              Style="{StaticResource ChecklistCheckBoxStyle}"/>

                    <CheckBox Content="Задвижки порошкового дозатора открыты"
                              IsChecked="{Binding PowderDispenserValvesOpen, Mode=TwoWay}"
                              Style="{StaticResource ChecklistCheckBoxStyle}"/>

                    <CheckBox Content="Задвижки сбросных емкостей открыты"
                              IsChecked="{Binding DischargeContainersValvesOpen, Mode=TwoWay}"
                              Style="{StaticResource ChecklistCheckBoxStyle}"/>

                    <CheckBox Content="Защитные стекла очищены"
                              IsChecked="{Binding ProtectiveGlassesCleaned, Mode=TwoWay}"
                              Style="{StaticResource ChecklistCheckBoxStyle}"/>

                    <CheckBox Content="Инертный газ подключен"
                              IsChecked="{Binding InertGasConnected, Mode=TwoWay}"
                              Style="{StaticResource ChecklistCheckBoxStyle}"/>

                    <CheckBox Content="Чиллер включен"
                              IsChecked="{Binding ChillerOn, Mode=TwoWay}"
                              Style="{StaticResource ChecklistCheckBoxStyle}"/>

                    <CheckBox Content="Плита построения установлена и выровнена"
                              IsChecked="{Binding BuildPlateInstalled, Mode=TwoWay}"
                              Style="{StaticResource ChecklistCheckBoxStyle}"/>

                    <CheckBox Content="Положение ножа рекоутера настроено"
                              IsChecked="{Binding RecoaterKnifeSet, Mode=TwoWay}"
                              Style="{StaticResource ChecklistCheckBoxStyle}"/>

                    <CheckBox Content="Первый слой нанесен"
                              IsChecked="{Binding FirstLayerApplied, Mode=TwoWay}"
                              Style="{StaticResource ChecklistCheckBoxStyle}"/>

                    <CheckBox Content="Все выполнено"
                              IsChecked="{Binding AllCheck, Mode=TwoWay}"
                              Style="{StaticResource ChecklistCheckBoxStyle}"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки -->
            <Border Grid.Row="2"
                    Background="#2D2D30"
                    Padding="20"
                    CornerRadius="0,0,8,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Запуск"
                            Command="{Binding StartCommand}"
                            Style="{StaticResource ButtonSuccess}"
                            Height="45"
                            Margin="0,0,10,0"
                            FontSize="16"
                            HorizontalAlignment="Stretch"
                            FontWeight="Bold"/>

                    <Button Grid.Column="1"
                            Content="Отмена"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource ButtonDanger}"
                            Height="45"
                            Margin="10,0,0,0"
                            FontSize="16"
                            HorizontalAlignment="Stretch"
                            FontWeight="Bold"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
