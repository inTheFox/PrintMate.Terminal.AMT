<UserControl x:Class="PrintMate.Terminal.Views.Modals.CameraSelectModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.Modals"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             Width="1024" Height="768"
             d:DesignHeight="768" d:DesignWidth="1024">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Затемнённый фон -->
        <Grid.Background>
            <SolidColorBrush Color="Black" Opacity="0.7"/>
        </Grid.Background>

        <!-- Модальное окно -->
        <Border Background="#2D2D30"
                CornerRadius="12"
                MinWidth="600"
                MaxWidth="800"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="#00D4FF" BlurRadius="30" ShadowDepth="0" Opacity="0.6"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <Border Grid.Row="0"
                        Background="#00D4FF"
                        CornerRadius="12,12,0,0"
                        Padding="30,20">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="32" Height="32" Fill="Black" Margin="0,0,15,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Выбор камеры"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Foreground="Black"/>
                                <TextBlock Text="Выберите камеру из списка доступных устройств"
                                           FontSize="12"
                                           Foreground="#333333"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Список камер -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Padding="30,20"
                              MaxHeight="500">
                    <ItemsControl ItemsSource="{Binding CameraCollection}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="CameraBorder"
                                        Background="#3E3E42"
                                        BorderBrush="#00D4FF"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="0,0,0,12"
                                        Cursor="Hand">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="2" Opacity="0.3"/>
                                    </Border.Effect>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Иконка камеры -->
                                        <Border Grid.Column="0"
                                                Width="48"
                                                Height="48"
                                                Background="#00D4FF"
                                                CornerRadius="24"
                                                Margin="0,0,15,0">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#00D4FF" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                            </Border.Effect>
                                            <TextBlock Text="📷"
                                                       FontSize="24"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Информация о камере -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       Margin="0,0,0,5"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ID: "
                                                           FontSize="12"
                                                           Foreground="#999999"/>
                                                <TextBlock Text="{Binding Id}"
                                                           FontSize="12"
                                                           Foreground="#CCCCCC"
                                                           Margin="3,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Индикатор выбора -->
                                        <Border Grid.Column="2"
                                                x:Name="SelectionIndicator"
                                                Width="24"
                                                Height="24"
                                                Background="#00D4FF"
                                                CornerRadius="12"
                                                Visibility="Collapsed"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="✓"
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Foreground="Black"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>

                                    <b:Interaction.Triggers>
                                        <b:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                            <b:InvokeCommandAction
                                                Command="{Binding DataContext.SelectCameraCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                        </b:EventTrigger>
                                    </b:Interaction.Triggers>
                                </Border>

                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                        <Setter TargetName="CameraBorder" Property="Background" Value="#252526"/>
                                        <Setter TargetName="CameraBorder" Property="BorderBrush" Value="#00FF00"/>
                                        <Setter TargetName="CameraBorder" Property="BorderThickness" Value="3"/>
                                        <Setter TargetName="SelectionIndicator" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="SelectionIndicator" Property="Background" Value="#00FF00"/>
                                    </DataTrigger>
                                    <Trigger SourceName="CameraBorder" Property="IsMouseOver" Value="True">
                                        <Setter TargetName="CameraBorder" Property="Background" Value="#4A4A4F"/>
                                        <Setter TargetName="CameraBorder" Property="BorderBrush" Value="#00BFFF"/>
                                    </Trigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Нижняя панель с кнопкой -->
                <Border Grid.Row="2"
                        Background="#252526"
                        CornerRadius="0,0,12,12"
                        Padding="30,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Информация -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Foreground="#999999" FontSize="11">
                                <Run Text="Разрешение: 2048x1536 • FPS: 60"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Кнопка выбора -->
                        <Button Grid.Column="1"
                                Command="{Binding SelectCameraCommand}"
                                MinWidth="180"
                                Height="50"
                                Background="#00D4FF"
                                Foreground="Black"
                                FontWeight="Bold"
                                FontSize="14"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#00D4FF"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        Padding="25,12">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#00D4FF" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#00BFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#0099CC"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="Выбрать камеру" FontSize="14" FontWeight="SemiBold"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
