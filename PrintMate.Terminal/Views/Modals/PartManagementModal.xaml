<UserControl x:Class="PrintMate.Terminal.Views.Modals.PartManagementModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.Modals"
             mc:Ignorable="d"
             Width="1024" Height="768"
             d:DesignHeight="768" d:DesignWidth="1024">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Стиль для TextBox параметров -->
        <Style x:Key="ParameterTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="#0d0d0d" HorizontalAlignment="Center" VerticalAlignment="Center"
            CornerRadius="10"
            BorderBrush="Transparent"
            BorderThickness="1"
            Width="850"
            MaxHeight="900">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                            BlurRadius="30"
                            ShadowDepth="0"
                            Opacity="0.8"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0"
                    Background="#0a0a0a"
                    CornerRadius="10,10,0,0"
                    Padding="30,20">
                <StackPanel>
                    <TextBlock Text="Управление деталью"
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding PartName}"
                              FontSize="16"
                              Foreground="Gray"
                              Margin="0,5,0,0"
                              HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Содержимое -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30,20">
                <StackPanel>
                    <!-- Заголовок параметров -->
                    <TextBlock Text="Параметры по типам регионов"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="White"
                              Margin="0,0,0,15"/>

                    <!-- Заголовки колонок -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Тип региона" FontSize="12" Foreground="#888" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Мощность (Вт)" FontSize="12" Foreground="#888" FontWeight="SemiBold" Margin="5,0,0,0"/>
                        <TextBlock Grid.Column="2" Text="Скорость (мм/с)" FontSize="12" Foreground="#888" FontWeight="SemiBold" Margin="5,0,0,0"/>
                        <TextBlock Grid.Column="3" Text="Диаметр (мкм)" FontSize="12" Foreground="#888" FontWeight="SemiBold" Margin="5,0,0,0"/>
                    </Grid>

                    <!-- Список типов регионов -->
                    <ItemsControl ItemsSource="{Binding RegionTypeParametersList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding HasRegions, Converter={StaticResource BoolToVisibility}, ConverterParameter=#151515}"
                                        BorderBrush="#2a2a2a"
                                        BorderThickness="0,0,0,1"
                                        Padding="0,8"
                                        Margin="0,0,0,2">
                                    <Grid IsEnabled="{Binding HasRegions}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Название типа региона -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Width="8" Height="8"
                                                     Fill="{Binding HasRegions, Converter={StaticResource BoolToVisibility}, ConverterParameter=#4CAF50}"
                                                     Margin="0,0,8,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#4CAF50"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasRegions}" Value="False">
                                                                <Setter Property="Fill" Value="#555"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock Text="{Binding DisplayName}"
                                                       FontSize="13"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasRegions}" Value="False">
                                                                <Setter Property="Foreground" Value="#666"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Мощность -->
                                        <TextBox Grid.Column="1"
                                                 Text="{Binding LaserPower, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ParameterTextBoxStyle}"
                                                 Margin="5,0"/>

                                        <!-- Скорость -->
                                        <TextBox Grid.Column="2"
                                                 Text="{Binding LaserSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ParameterTextBoxStyle}"
                                                 Margin="5,0"/>

                                        <!-- Диаметр пучка -->
                                        <TextBox Grid.Column="3"
                                                 Text="{Binding LaserBeamDiameter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ParameterTextBoxStyle}"
                                                 Margin="5,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Информация -->
                    <Border Background="#1a1a1a"
                            BorderBrush="#ff6f00"
                            BorderThickness="2"
                            CornerRadius="5"
                            Padding="15"
                            Margin="0,20,0,10">
                        <StackPanel>
                            <TextBlock Text="Информация"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="#ff6f00"
                                      Margin="0,0,0,5"/>
                            <TextBlock Text="Параметры будут применены ко всем регионам соответствующего типа данной детали во всех слоях проекта. Серые типы регионов отсутствуют в детали."
                                      FontSize="12"
                                      Foreground="Gray"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки -->
            <Border Grid.Row="2"
                    Background="#0f0f0f"
                    CornerRadius="0,0,10,10"
                    Padding="30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Кнопка удаления (слева) -->
                    <Button Grid.Column="0"
                            Content="Удалить деталь"
                            Command="{Binding DeletePartCommand}"
                            Width="180"
                            Height="45"
                            HorizontalAlignment="Left"
                            Background="#F44336"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#F44336"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="5"
                                                   BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#e53935"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#c62828"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Кнопки справа -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Кнопка применить -->
                        <Button Content="Применить"
                                Command="{Binding ApplyChangesCommand}"
                                Width="140"
                                Height="45"
                                Margin="0,0,10,0"
                                Background="#4CAF50"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#4CAF50"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="5"
                                                       BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#45a049"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#3d8b40"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Кнопка Отмена -->
                        <Button Content="Отмена"
                                Command="{Binding CloseCommand}"
                                Width="120"
                                Height="45"
                                Background="#757575"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#757575"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="5"
                                                       BorderThickness="0">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#616161"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#424242"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
