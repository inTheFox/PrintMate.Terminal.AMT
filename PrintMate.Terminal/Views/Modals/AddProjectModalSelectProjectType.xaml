<UserControl x:Class="PrintMate.Terminal.Views.Modals.AddProjectModalSelectProjectType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:Background="#141414"
             d:DesignHeight="800" d:DesignWidth="900">

    <UserControl.Resources>
        <SolidColorBrush x:Key="ItemBackgroundBrush" Color="#222222"/>
    </UserControl.Resources>

    <Grid Width="900" Height="800">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Foreground="White" FontWeight="Black" FontSize="40" Text="Выберите тип проекта"/>

            <ListBox ItemsSource="{Binding ProjectTypes}"
                     SelectedItem="{Binding SelectedProjectType, Mode=TwoWay}"
                     Background="Transparent"
                     BorderThickness="0"
                     Margin="0 50 0 0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     HorizontalAlignment="Center">

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <!-- Убрали ItemTemplate — всё теперь в ItemContainerStyle -->

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="IsTabStop" Value="False"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="PART_Border"
                                            Width="300"
                                            Height="500"
                                            CornerRadius="15"
                                            Padding="15"
                                            Margin="10,5,10,0"
                                            Background="{StaticResource ItemBackgroundBrush}"
                                            Cursor="Hand"
                                            HorizontalAlignment="Center"
                                            PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown">
                                        <StackPanel>
                                            <Image Source="/images/file.png"/>
                                            <TextBlock x:Name="NameText"
                                                       Text="{Binding Name}"
                                                       FontSize="30"
                                                       FontWeight="Black"
                                                       HorizontalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       Foreground="White"/>
                                            <TextBlock x:Name="DescText"
                                                       Text="{Binding Description}"
                                                       FontSize="15"
                                                       HorizontalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       Foreground="Gray"/>
                                        </StackPanel>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <!-- Анимация фона - быстрее -->
                                                        <ColorAnimation
                                                            Storyboard.TargetName="PART_Border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="OrangeRed"
                                                            Duration="0:0:0.2"
                                                            FillBehavior="HoldEnd"/>
                                                        <!-- Анимация заголовка -->
                                                        <ColorAnimation
                                                            Storyboard.TargetName="NameText"
                                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                            To="Black"
                                                            Duration="0:0:0.2"
                                                            FillBehavior="HoldEnd"/>
                                                        <!-- Анимация описания -->
                                                        <ColorAnimation
                                                            Storyboard.TargetName="DescText"
                                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                            To="Black"
                                                            Duration="0:0:0.2"
                                                            FillBehavior="HoldEnd"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>

                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <!-- Возврат фона -->
                                                        <ColorAnimation
                                                            Storyboard.TargetName="PART_Border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#222222"
                                                            Duration="0:0:0.2"
                                                            FillBehavior="HoldEnd"/>
                                                        <!-- Возврат заголовка -->
                                                        <ColorAnimation
                                                            Storyboard.TargetName="NameText"
                                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                            To="White"
                                                            Duration="0:0:0.2"
                                                            FillBehavior="HoldEnd"/>
                                                        <!-- Возврат описания -->
                                                        <ColorAnimation
                                                            Storyboard.TargetName="DescText"
                                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                            To="Gray"
                                                            Duration="0:0:0.2"
                                                            FillBehavior="HoldEnd"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>

                                        <!-- Отключаем изменение фона при наведении -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="PART_Border" Property="Background" Value="{StaticResource ItemBackgroundBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <!--<Button Content="Далее"
                    Height="50"
                    Margin="0 50 0 0"
                    Background="White"
                    Foreground="Black"
                    x:Name="NextButton"
                    Click="NextButton_OnClick"/>-->


            <WrapPanel HorizontalAlignment="Center">
                <Button BorderBrush="OrangeRed" Width="200" Height="50" Background="#222222" Click="NextButton_OnClick" Content="Далее" Margin="0 50 0 0" Style="{StaticResource ButtonPrimary}"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>