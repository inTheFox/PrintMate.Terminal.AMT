<UserControl x:Class="PrintMate.Terminal.Views.Modals.ProjectPreviewModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrintMate.Terminal.Views.Modals"
             xmlns:views="clr-namespace:PrintMate.Terminal.Views"
             Width="680"
             Height="510"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Базовый стиль кнопок навигации -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="8"
                                BorderThickness="0"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#3a3a3a" Offset="0"/>
                                    <GradientStop Color="#2a2a2a" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#4a4a4a" Offset="0"/>
                                            <GradientStop Color="#3a3a3a" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль оранжевой кнопки -->
        <Style x:Key="OrangeButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="8"
                                BorderThickness="0"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FF8C00" Offset="0"/>
                                    <GradientStop Color="#CC7000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#FF8C00" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FFA333" Offset="0"/>
                                            <GradientStop Color="#E08000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль красной кнопки -->
        <Style x:Key="RedButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="8"
                                BorderThickness="0"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#E53935" Offset="0"/>
                                    <GradientStop Color="#C62828" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#EF5350" Offset="0"/>
                                            <GradientStop Color="#D32F2F" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль серой кнопки -->
        <Style x:Key="GrayButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="8"
                                BorderThickness="0"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#4a4a4a" Offset="0"/>
                                    <GradientStop Color="#333333" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#5a5a5a" Offset="0"/>
                                            <GradientStop Color="#444444" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="MainBorder"
                                   Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                   From="0.9" To="1" Duration="0:0:0.25">
                        <DoubleAnimation.EasingFunction>
                            <BackEase EasingMode="EaseOut" Amplitude="0.15"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="MainBorder"
                                   Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                   From="0.9" To="1" Duration="0:0:0.25">
                        <DoubleAnimation.EasingFunction>
                            <BackEase EasingMode="EaseOut" Amplitude="0.15"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="MainBorder"
                                   Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

    <!-- Основной контейнер -->
    <Border x:Name="MainBorder"
            Width="800" Height="620"
            CornerRadius="12"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>

        <!-- Тёмный фон -->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1a1a1a" Offset="0"/>
                <GradientStop Color="#121212" Offset="0.5"/>
                <GradientStop Color="#0a0a0a" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <!-- Тень -->
        <Border.Effect>
            <DropShadowEffect Color="#000000"
                            BlurRadius="50"
                            ShadowDepth="0"
                            Opacity="0.9"/>
        </Border.Effect>

        <!-- Рамка с оранжевым акцентом -->
        <Border CornerRadius="12" BorderThickness="1">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#4a3520" Offset="0"/>
                    <GradientStop Color="#2a2a2a" Offset="0.5"/>
                    <GradientStop Color="#3a2a1a" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <Border Grid.Row="0" CornerRadius="12,12,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#1f1a15" Offset="0"/>
                            <GradientStop Color="#181410" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <!-- Оранжевая полоса сверху -->
                        <Border VerticalAlignment="Top" Height="3" CornerRadius="12,12,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#994700" Offset="0"/>
                                    <GradientStop Color="#FF8C00" Offset="0.3"/>
                                    <GradientStop Color="#FFa500" Offset="0.5"/>
                                    <GradientStop Color="#FF8C00" Offset="0.7"/>
                                    <GradientStop Color="#994700" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <StackPanel Orientation="Horizontal" Margin="18,14,18,12">
                            <!-- Иконка -->
                            <Border Width="28" Height="28" CornerRadius="6" Margin="0,0,10,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FF8C00" Offset="0"/>
                                        <GradientStop Color="#CC7000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="3D"
                                          FontSize="11"
                                          FontWeight="Bold"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>

                            <!-- Заголовок -->
                            <TextBlock Text="Просмотр проекта"
                                      FontSize="15"
                                      FontWeight="SemiBold"
                                      Foreground="#f0f0f0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Разделитель -->
                <Rectangle Grid.Row="0" VerticalAlignment="Bottom" Height="1">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#1a1a1a" Offset="0"/>
                            <GradientStop Color="#4a3520" Offset="0.5"/>
                            <GradientStop Color="#1a1a1a" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <!-- Содержимое -->
                <Grid Grid.Row="1" Margin="10,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Canvas для отображения слоя -->
                        <Border Grid.Row="0" CornerRadius="8" Margin="3">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#151515" Offset="0"/>
                                    <GradientStop Color="#0d0d0d" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#3a3530" Offset="0"/>
                                    <GradientStop Color="#252525" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Border.BorderThickness>1</Border.BorderThickness>

                            <Viewbox Stretch="Uniform" Margin="10">
                                <views:LayerCanvasModal x:Name="LayerCanvas" />
                            </Viewbox>
                        </Border>

                        <!-- Навигация по слоям -->
                        <Border Grid.Row="1" CornerRadius="8" Padding="12,10" Margin="3,6,3,3">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#1f1a15" Offset="0"/>
                                    <GradientStop Color="#151210" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.BorderBrush>
                                <SolidColorBrush Color="#3a3530"/>
                            </Border.BorderBrush>
                            <Border.BorderThickness>1</Border.BorderThickness>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Кнопка "Предыдущий слой" -->
                                <Button Grid.Column="0"
                                        Command="{Binding PreviousLayerCommand}"
                                        Style="{StaticResource NavButton}"
                                        Margin="0,0,10,0"
                                        ToolTip="Предыдущий слой">
                                    <TextBlock Text="◀" Foreground="White" FontSize="12"/>
                                </Button>

                                <!-- Слайдер и информация о слое -->
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Информация о текущем слое -->
                                    <TextBlock Grid.Row="0"
                                              Text="{Binding CurrentLayerInfo}"
                                              Foreground="#FF8C00"
                                              FontSize="11"
                                              FontWeight="SemiBold"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>

                                    <!-- Слайдер -->
                                    <Slider Grid.Row="1"
                                           Value="{Binding CurrentLayerIndex, Mode=TwoWay}"
                                           Minimum="0"
                                           Maximum="{Binding MaxLayerIndex}"
                                           TickFrequency="1"
                                           IsSnapToTickEnabled="True"
                                           VerticalAlignment="Center"/>
                                </Grid>

                                <!-- Кнопка "Следующий слой" -->
                                <Button Grid.Column="2"
                                        Command="{Binding NextLayerCommand}"
                                        Style="{StaticResource NavButton}"
                                        Margin="10,0,0,0"
                                        ToolTip="Следующий слой">
                                    <TextBlock Text="▶" Foreground="White" FontSize="12"/>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Правая панель: История сессий -->
                    <Border Grid.Column="1" CornerRadius="8" Margin="6,3,3,3" Padding="12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#1a1815" Offset="0"/>
                                <GradientStop Color="#121110" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#3a3530"/>
                        </Border.BorderBrush>
                        <Border.BorderThickness>1</Border.BorderThickness>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Заголовок -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <Border Width="20" Height="20" CornerRadius="5" Margin="0,0,8,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF8C00" Offset="0"/>
                                            <GradientStop Color="#CC7000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="H"
                                              FontSize="10"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="История печати"
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          Foreground="#f0f0f0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Пустое состояние -->
                            <StackPanel Grid.Row="1"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Visibility="{Binding HasNoSessions, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Border Width="40" Height="40" CornerRadius="20" Margin="0,0,0,10">
                                    <Border.Background>
                                        <SolidColorBrush Color="#2a2520"/>
                                    </Border.Background>
                                    <TextBlock Text="?"
                                              FontSize="18"
                                              Foreground="#5a5550"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Проект ещё не печатался"
                                          FontSize="10"
                                          Foreground="#5a5550"
                                          TextWrapping="Wrap"
                                          TextAlignment="Center"/>
                            </StackPanel>

                            <!-- Список сессий -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Sessions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="6" Padding="8" Margin="0,0,0,6" Cursor="Hand"
                                                   MouseDown="OnSessionClick">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#252220" Offset="0"/>
                                                        <GradientStop Color="#1a1815" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <Border.BorderBrush>
                                                    <SolidColorBrush Color="#3a3530"/>
                                                </Border.BorderBrush>
                                                <Border.BorderThickness>1</Border.BorderThickness>

                                                <StackPanel>
                                                    <!-- Дата и статус -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0"
                                                                  Text="{Binding StartedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                                                                  FontSize="10"
                                                                  Foreground="#f0f0f0"
                                                                  FontWeight="SemiBold"/>

                                                        <!-- Индикатор статуса -->
                                                        <Border Grid.Column="1" CornerRadius="3" Padding="5,2">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="#3a3a3a"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Finished">
                                                                            <Setter Property="Background">
                                                                                <Setter.Value>
                                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                        <GradientStop Color="#4CAF50" Offset="0"/>
                                                                                        <GradientStop Color="#388E3C" Offset="1"/>
                                                                                    </LinearGradientBrush>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Stopped">
                                                                            <Setter Property="Background">
                                                                                <Setter.Value>
                                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                        <GradientStop Color="#FF9800" Offset="0"/>
                                                                                        <GradientStop Color="#E65100" Offset="1"/>
                                                                                    </LinearGradientBrush>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Started">
                                                                            <Setter Property="Background">
                                                                                <Setter.Value>
                                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                        <GradientStop Color="#F44336" Offset="0"/>
                                                                                        <GradientStop Color="#C62828" Offset="1"/>
                                                                                    </LinearGradientBrush>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock FontSize="8" Foreground="White" FontWeight="SemiBold">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Text" Value="???"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Finished">
                                                                                <Setter Property="Text" Value="Завершено"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Stopped">
                                                                                <Setter Property="Text" Value="Остановлено"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Started">
                                                                                <Setter Property="Text" Value="Прервано"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Border>
                                                    </Grid>

                                                    <!-- Прогресс -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <TextBlock Text="Слоёв: "
                                                                  FontSize="9"
                                                                  Foreground="#7a7570"/>
                                                        <TextBlock FontSize="9" Foreground="#FF8C00" FontWeight="SemiBold">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0} / {1}">
                                                                    <Binding Path="LastCompletedLayer" Converter="{x:Null}"/>
                                                                    <Binding Path="TotalLayers"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- Оператор -->
                                                    <TextBlock Text="{Binding UserName, StringFormat='Оператор: {0}'}"
                                                              FontSize="8"
                                                              Foreground="#5a5550"
                                                              Margin="0,3,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Overlay загрузки -->
                    <Border Grid.ColumnSpan="2"
                            Background="#EE0a0a0a"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                            CornerRadius="8">
                        <Grid>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <!-- Анимированный круг загрузки -->
                                <Viewbox Width="50" Height="50" Margin="0,0,0,15">
                                    <Canvas Width="100" Height="100">
                                        <Ellipse Width="100" Height="100"
                                                Stroke="#FF8C00"
                                                StrokeThickness="6"
                                                StrokeDashArray="200 200"
                                                StrokeDashOffset="0">
                                            <Ellipse.RenderTransform>
                                                <RotateTransform x:Name="LoadingSpinner" CenterX="50" CenterY="50"/>
                                            </Ellipse.RenderTransform>
                                            <Ellipse.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetName="LoadingSpinner"
                                                                           Storyboard.TargetProperty="Angle"
                                                                           From="0" To="360"
                                                                           Duration="0:0:1.2"
                                                                           RepeatBehavior="Forever"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Ellipse.Triggers>
                                        </Ellipse>
                                    </Canvas>
                                </Viewbox>

                                <!-- Сообщение о статусе -->
                                <TextBlock Text="{Binding StatusMessage}"
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          Foreground="#f0f0f0"
                                          HorizontalAlignment="Center"
                                          TextWrapping="Wrap"
                                          TextAlignment="Center"
                                          MaxWidth="280"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Кнопки -->
                <Border Grid.Row="2" CornerRadius="0,0,12,12" Padding="15,12">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#151210" Offset="0"/>
                            <GradientStop Color="#0c0a08" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Кнопка OK -->
                        <Button Content="Установить проект для печати"
                                Command="{Binding OkCommand}"
                                Visibility="{Binding OkButtonVisibility}"
                                Style="{StaticResource OrangeButton}"
                                Width="200"
                                Padding="12,0"
                                Margin="0,0,8,0"/>

                        <!-- Кнопка Удалить -->
                        <Button Content="Удалить проект"
                                Command="{Binding NoCommand}"
                                Visibility="{Binding NoButtonVisibility}"
                                Style="{StaticResource RedButton}"
                                Width="110"
                                Margin="0,0,8,0"/>

                        <!-- Кнопка Отмена -->
                        <Button Content="Отмена"
                                Command="{Binding CancelCommand}"
                                Visibility="{Binding CancelButtonVisibility}"
                                Style="{StaticResource GrayButton}"
                                Width="90"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Border>
</UserControl>
