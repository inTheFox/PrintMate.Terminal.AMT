<UserControl x:Class="PrintMate.Terminal.Views.LayerCanvasModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="Transparent"
             ClipToBounds="True">
    <Grid>
        <!-- Border для визуального поля 320x320мм -->
        <Border BorderBrush="Transparent"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="690"
                Height="550"
                ClipToBounds="True">

            <!-- Viewport Canvas - статичное окно просмотра -->
            <Canvas x:Name="ViewportCanvas"
                    Width="690"
                    Height="550"
                    Background="#1b1b1b"
                    ClipToBounds="True"
                    IsManipulationEnabled="True"
                    MouseWheel="Canvas_MouseWheel"
                    MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                    MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                    MouseMove="Canvas_MouseMove"
                    ManipulationStarting="Canvas_ManipulationStarting"
                    ManipulationDelta="Canvas_ManipulationDelta"
                    ManipulationCompleted="Canvas_ManipulationCompleted">

                <!-- Main Canvas - масштабируемый и перемещаемый -->
                <Canvas x:Name="MainCanvas"
                        Background="#303030">
                    <Canvas.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1" CenterX="150" CenterY="150"/>
                            <TranslateTransform x:Name="TranslateTransform" X="0" Y="0"/>
                        </TransformGroup>
                    </Canvas.RenderTransform>
                </Canvas>

                <!-- Overlay Canvas для названия детали (поверх MainCanvas, но с теми же трансформациями) -->
                <Canvas x:Name="OverlayCanvas"
                        Width="700"
                        Height="700"
                        Background="Transparent"
                        IsHitTestVisible="False">
                    <Canvas.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="{Binding ScaleX, ElementName=ScaleTransform}"
                                          ScaleY="{Binding ScaleY, ElementName=ScaleTransform}"
                                          CenterX="700"
                                          CenterY="700"/>
                            <TranslateTransform X="{Binding X, ElementName=TranslateTransform}"
                                              Y="{Binding Y, ElementName=TranslateTransform}"/>
                        </TransformGroup>
                    </Canvas.RenderTransform>

                    <!-- TextBlock для отображения названия детали -->
                    <Border x:Name="PartNameBorder"
                            Visibility="Collapsed"
                            Background="#CC000000"
                            CornerRadius="4"
                            Padding="8,4">
                        <TextBlock x:Name="PartNameText"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="Bold"/>
                    </Border>
                </Canvas>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
