<UserControl x:Class="PrintMate.Terminal.Views.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:PrintMate.Terminal.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <viewModels:LogMessageTypeToBrushConverter x:Key="LogMessageTypeToBrushConverter"/>
        <viewModels:LogMessageTextTypeToBrushConverter x:Key="LogMessageTextTypeToBrushConverter"/>
    </UserControl.Resources>
    <!-- Лог в ScrollViewer с автопрокруткой -->
    <StackPanel>
        <Expander Header="Настройки лога" IsExpanded="True" Padding="5">
            <Border  Background="White">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox IsChecked="{Binding InfoEnabled}" Margin="0 0 20 0" Grid.Column="0" Foreground="Black">Info</CheckBox>
                    <CheckBox IsChecked="{Binding WarningEnabled}" Margin="0 0 20 0" Grid.Column="1"  Foreground="Black">Warning</CheckBox>
                    <CheckBox IsChecked="{Binding SuccessEnabled}" Margin="0 0 20 0" Grid.Column="2" Foreground="Black">Success</CheckBox>
                    <CheckBox IsChecked="{Binding ErrorEnabled}" Margin="0 0 20 0" Grid.Column="3" Foreground="Black">Error</CheckBox>
                </Grid>
            </Border>
        </Expander>

        <Border Background="Black" MinHeight="500" Height="500"> 
            <ScrollViewer x:Name="LogScrollViewer" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"   >

                <StackPanel>
                    <ItemsControl ItemsSource="{Binding LogEntries}" Margin="5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="2">
                                    <TextBlock Text="{Binding TimestampString}" Foreground="Gray" FontStyle="Italic" Margin="0,0,5,0"/>
                                    <TextBlock Text="|" Foreground="White" Margin="0,0,5,0"/>

                                    <Border Background="{Binding EntryType, Converter={StaticResource LogMessageTypeToBrushConverter}}"
                                             Padding="6,0"
                                             CornerRadius="2"
                                             BorderBrush="Transparent"
                                             SnapsToDevicePixels="True">
                                        <TextBlock Text="{Binding EntryType}" 
                                                   Foreground="{Binding EntryType, Converter={StaticResource LogMessageTextTypeToBrushConverter}}"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center">
                                            <!-- Отключаем глобальный стиль HandyControl -->
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{x:Null}">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="FontSize" Value="12"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>

                                    <TextBlock Text=" | " Foreground="White" Margin="5,0"/>
                                    <TextBlock Text="{Binding Message}" Foreground="White" TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>

    </StackPanel>
</UserControl>
