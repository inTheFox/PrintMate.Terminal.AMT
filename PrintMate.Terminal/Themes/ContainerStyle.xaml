<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PrintMate.Terminal.Views.ComponentsViews">

    <Style TargetType="{x:Type local:Container}">
        <Setter Property="Margin" Value="0 0 0 15"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Container}">
                    <!-- Main Border with animations -->
                    <Border x:Name="PART_ContentBorder"
                            CornerRadius="20"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#0a0a0a" Offset="0"/>
                                <GradientStop Color="#060606" Offset="0.5"/>
                                <GradientStop Color="#080808" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1f1f1f" Offset="0"/>
                                <GradientStop Color="#141414" Offset="0.5"/>
                                <GradientStop Color="#1a1a1a" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.BorderThickness>1</Border.BorderThickness>
                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="PART_ScaleTransform" ScaleX="1" ScaleY="1"/>
                                <RotateTransform x:Name="PART_RotateTransform" Angle="0"/>
                                <TranslateTransform x:Name="PART_TranslateTransform" Y="0"/>
                            </TransformGroup>
                        </Border.RenderTransform>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header Section -->
                            <Border Grid.Row="0" Padding="20 18 20 15">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#0c0c0c" Offset="0"/>
                                        <GradientStop Color="#0a0a0a" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Accent Line -->
                                    <Border Grid.Column="0"
                                            Width="4"
                                            CornerRadius="2"
                                            Margin="0 2 15 2"
                                            VerticalAlignment="Stretch">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#ff6f00" Offset="0"/>
                                                <GradientStop Color="#e65c00" Offset="0.5"/>
                                                <GradientStop Color="#cc5500" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.4" Color="#ff6f00"/>
                                        </Border.Effect>
                                    </Border>

                                    <!-- Title -->
                                    <TextBlock Grid.Column="1"
                                               FontWeight="Bold"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center"
                                               FontSize="{TemplateBinding TitleSize}"
                                               Text="{TemplateBinding Title}">
                                        <TextBlock.Foreground>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#f0f0f0" Offset="0"/>
                                                <GradientStop Color="#d0d0d0" Offset="1"/>
                                            </LinearGradientBrush>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <!-- Separator Line -->
                            <Border Grid.Row="0"
                                    VerticalAlignment="Bottom"
                                    Height="1">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#00ffffff" Offset="0"/>
                                        <GradientStop Color="#15ffffff" Offset="0.2"/>
                                        <GradientStop Color="#20ffffff" Offset="0.5"/>
                                        <GradientStop Color="#15ffffff" Offset="0.8"/>
                                        <GradientStop Color="#00ffffff" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <!-- Content Section -->
                            <Border Grid.Row="1"
                                    Padding="15 12 15 15"
                                    CornerRadius="0 0 20 20">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#080808" Offset="0"/>
                                        <GradientStop Color="#0a0a0a" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <ItemsPresenter/>
                            </Border>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Hover Effect -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_ContentBorder" Property="BorderBrush">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#2a2a2a" Offset="0"/>
                                        <GradientStop Color="#1f1f1f" Offset="0.5"/>
                                        <GradientStop Color="#252525" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="PART_ContentBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.4" Color="#000000"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
